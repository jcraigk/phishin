.card {
  position: relative;
  border-radius: 0.5rem;
  width: 100%;
  box-shadow: 0 2px 12px rgba(0,0,0,0.2);
  background: #d4d5d7;
  overflow: visible;
}

.blur-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  border-radius: 0.5rem;
  pointer-events: none;
}

.background-blur {
  position: absolute;
  top: -50px;
  left: -50px;
  right: -50px;
  height: 2000px;
  background-size: 100% auto;
  background-position: top center;
  background-repeat: repeat-y;
  filter: blur(100px);
  opacity: 0.8;
  z-index: 0;
}

.card-content {
  position: relative;
  z-index: 1;
  overflow: visible;
}

.card-header {
  display: flex;
  gap: 12px;
  padding: 14px;
  background: rgba(180, 180, 180, 0.5);
  backdrop-filter: blur(12px) saturate(1.3);
  -webkit-backdrop-filter: blur(12px) saturate(1.3);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  align-items: center;
  border-radius: 0.5rem 0.5rem 0 0;
  position: relative;
  z-index: 10;
}

.expand-btn {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 24px;
  height: 24px;
  background: rgba(0, 0, 0, 0.2);
  border: none;
  border-radius: 4px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  z-index: 20;
  transition: background 0.15s;
  padding: 0;
}

.expand-btn:hover {
  background: rgba(0, 0, 0, 0.4);
}

.expand-btn svg {
  width: 14px;
  height: 14px;
}

.expand-btn .collapse-icon {
  display: none;
}

.card.expanded .expand-btn .expand-icon {
  display: none;
}

.card.expanded .expand-btn .collapse-icon {
  display: block;
}

