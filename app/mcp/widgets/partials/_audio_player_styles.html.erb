.card.has-player {
  padding-bottom: 0;
}

.card.has-player.expanded.player-visible {
  padding-bottom: 96px;
}

.audio-player {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #c7c8ca;
  z-index: 10;
  border-radius: 0 0 0.5rem 0.5rem;
  overflow: hidden;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.15);
  transform: translateY(100%);
  opacity: 0;
  visibility: hidden;
  transition: transform 0.5s ease, opacity 0.3s ease, visibility 0s 0.5s;
}

.audio-player.visible {
  transform: translateY(0);
  opacity: 1;
  visibility: visible;
  transition: transform 0.5s ease, opacity 0.3s ease, visibility 0s 0s;
}

.player-top-row {
  display: flex;
  align-items: center;
  padding: 6px 14px 6px 19px;
  gap: 5px;
}

.player-track-info {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.player-track-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: #515152;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.player-track-subtitle {
  font-size: 0.95rem;
  color: #6d6f71;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.player-track-subtitle .player-link {
  color: #6d6f71;
  text-decoration: none;
  transition: color 0.15s;
}

.player-track-subtitle .player-link:hover {
  color: #03BBF2;
}

.player-controls {
  display: flex;
  align-items: center;
  gap: 4px;
  flex-shrink: 0;
}

.skip-btn {
  background: none;
  border: none;
  padding: 6px;
  cursor: pointer;
  color: #6d6f71;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.15s;
}

.skip-btn:hover:not(:disabled) {
  color: #03BBF2;
}

.skip-btn:disabled {
  opacity: 0.2;
  cursor: not-allowed;
}

.skip-btn svg {
  width: 20px;
  height: 20px;
}

.scrub-btn {
  background: none;
  border: none;
  padding: 6px;
  cursor: pointer;
  color: #6d6f71;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.15s;
  position: relative;
}

.scrub-btn:hover:not(:disabled) {
  color: #03BBF2;
}

.scrub-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.scrub-btn svg {
  width: 20px;
  height: 20px;
}

.play-pause-btn {
  width: 44px;
  height: 44px;
  background: #03BBF2;
  border: none;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  transition: background 0.15s;
  margin: 0 2px;
}

.play-pause-btn:hover:not(:disabled) {
  background: #02a8da;
}

.play-pause-btn:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  background: #4dc9f5;
}

.play-pause-btn svg {
  width: 22px;
  height: 22px;
}

.play-pause-btn .play-icon {
  margin-left: 3px;
}

.player-close-btn {
  background: none;
  border: none;
  padding: 6px;
  cursor: pointer;
  color: #6d6f71;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.15s;
  margin-left: 4px;
}

.player-close-btn:hover {
  color: #515152;
}

.player-close-btn svg {
  width: 16px;
  height: 16px;
}

.player-bottom-row {
  display: flex;
  align-items: center;
  padding: 0 10px 8px;
  gap: 8px;
  height: 44px;
}

.time-display {
  font-size: 0.95rem;
  color: #6d6f71;
  font-variant-numeric: tabular-nums;
  min-width: 38px;
  text-align: center;
  cursor: pointer;
}

.scrubber-container {
  flex: 1;
  height: 100%;
  position: relative;
  cursor: pointer;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center;
  opacity: 0.5;
  transition: opacity 0.3s ease;
}

.scrubber-container.loaded {
  opacity: 1;
}

.progress-overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: linear-gradient(to right, #03BBF2 0%, rgba(255,255,255,0) 0%);
  mask-size: 100% 100%;
  mask-repeat: no-repeat;
  mask-position: center;
  -webkit-mask-size: 100% 100%;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
}

.play-pause-btn {
  position: relative;
}

.loading-spinner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 22px;
  height: 22px;
  border: 2.5px solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}

@keyframes spin {
  to { transform: translate(-50%, -50%) rotate(360deg); }
}

