.card.has-player {
  padding-bottom: 0;
}

.card.has-player.expanded.player-visible {
  padding-bottom: 96px;
}

.audio-player {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #c7c8ca;
  z-index: 10;
  border-radius: 0 0 0.5rem 0.5rem;
  overflow: hidden;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.15);
  transform: translateY(100%);
  opacity: 0;
  visibility: hidden;
  transition: transform 0.5s ease, opacity 0.3s ease, visibility 0s 0.5s;
}

.audio-player::before {
  content: '';
  position: absolute;
  top: -50px;
  left: -50px;
  right: -50px;
  bottom: -50px;
  background-image: var(--player-bg-image);
  background-size: cover;
  background-position: center;
  filter: blur(55px) saturate(0.9);
  opacity: 0.7;
  z-index: 0;
}

.audio-player::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(175, 176, 178, 0.5);
  z-index: 0;
}

.audio-player.visible {
  transform: translateY(0);
  opacity: 1;
  visibility: visible;
  transition: transform 0.5s ease, opacity 0.3s ease, visibility 0s 0s;
}

.player-top-row {
  display: flex;
  align-items: center;
  padding: 8px 14px 4px 19px;
  gap: 5px;
  position: relative;
  z-index: 1;
}

.player-track-info {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.player-track-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: #3a3a3a;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.player-track-subtitle {
  font-size: 0.95rem;
  color: #3a3a3a;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.player-track-subtitle .player-link,
.player-track-subtitle .location-link {
  color: #3a3a3a;
  text-decoration: none;
  transition: color 0.15s;
}

.player-track-subtitle .player-link:hover,
.player-track-subtitle .location-link:hover {
  color: #03BBF2;
}

.player-controls {
  display: flex;
  align-items: center;
  gap: 4px;
  flex-shrink: 0;
}

.skip-btn {
  background: none;
  border: none;
  padding: 6px;
  cursor: pointer;
  color: #505050;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.15s;
}

.skip-btn:hover:not(:disabled) {
  color: #03BBF2;
}

.skip-btn:disabled {
  opacity: 0.2;
  cursor: not-allowed;
}

.skip-btn svg {
  width: 20px;
  height: 20px;
}

.scrub-btn {
  background: none;
  border: none;
  padding: 6px;
  cursor: pointer;
  color: #505050;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.15s;
  position: relative;
}

.scrub-btn:hover:not(:disabled) {
  color: #03BBF2;
}

.scrub-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.scrub-btn svg {
  width: 20px;
  height: 20px;
}

.play-pause-btn {
  width: 38px;
  height: 38px;
  background: #505050;
  border: none;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  transition: background 0.15s;
  margin: 0 2px;
}

.play-pause-btn:hover:not(:disabled) {
  background: #404040;
}

.play-pause-btn:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  background: #707070;
}

.card.audio-playing .play-pause-btn {
  background: #03BBF2;
}

.card.audio-playing .play-pause-btn:hover:not(:disabled) {
  background: #02a8da;
}

.play-pause-btn svg {
  width: 18px;
  height: 18px;
}

.play-pause-btn .play-icon {
  margin-left: 3px;
}

.player-close-btn {
  background: none;
  border: none;
  padding: 6px;
  cursor: pointer;
  color: #505050;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.15s;
  margin-left: 4px;
}

.player-close-btn:hover {
  color: #515152;
}

.player-close-btn svg {
  width: 16px;
  height: 16px;
}

.player-bottom-row {
  display: flex;
  align-items: center;
  padding: 0 10px 6px;
  gap: 8px;
  height: 38px;
  position: relative;
  z-index: 1;
}

.time-display {
  font-size: 0.95rem;
  color: #505050;
  font-variant-numeric: tabular-nums;
  min-width: 38px;
  text-align: center;
  cursor: pointer;
}

.scrubber-container {
  flex: 1;
  height: 100%;
  position: relative;
  cursor: pointer;
  --waveform-url: none;
}

.scrubber-container::before {
  content: '';
  position: absolute;
  inset: 0;
  background: #505050;
  mask-image: var(--waveform-url);
  mask-size: 100% 100%;
  mask-repeat: no-repeat;
  mask-position: center;
  -webkit-mask-image: var(--waveform-url);
  -webkit-mask-size: 100% 100%;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
  opacity: 0;
  transition: opacity 0.15s ease;
}

.scrubber-container.loaded::before {
  opacity: 1;
}

.progress-overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: linear-gradient(to right, var(--progress-color, #b0b0b0) 0%, rgba(255,255,255,0) 0%);
  mask-image: var(--waveform-url);
  mask-size: 100% 100%;
  mask-repeat: no-repeat;
  mask-position: center;
  -webkit-mask-image: var(--waveform-url);
  -webkit-mask-size: 100% 100%;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
  opacity: 0;
  transition: opacity 0.15s ease;
}

.card.audio-playing .progress-overlay {
  --progress-color: #03BBF2;
}

.scrubber-container.loaded .progress-overlay {
  opacity: 1;
}

.play-pause-btn {
  position: relative;
}

.loading-spinner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 18px;
  height: 18px;
  border: 2.5px solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}

@keyframes spin {
  to { transform: translate(-50%, -50%) rotate(360deg); }
}

@property --border-angle {
  syntax: '<angle>';
  initial-value: 0deg;
  inherits: false;
}

.card.audio-playing::before {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 0.5rem;
  padding: 4px;
  background: conic-gradient(
    from var(--border-angle),
    transparent 0%,
    transparent 11%,
    rgba(3, 187, 242, 0.3) 20%,
    rgba(3, 187, 242, 0.6) 35%,
    rgba(225, 245, 255, 0.9) 50%,
    rgba(3, 187, 242, 0.6) 65%,
    rgba(3, 187, 242, 0.3) 80%,
    transparent 89%,
    transparent 100%
  );
  -webkit-mask: 
    linear-gradient(#fff 0 0) content-box, 
    linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  pointer-events: none;
  z-index: 100;
  animation: rotate-gradient 3.2s linear infinite;
}

@keyframes rotate-gradient {
  from { --border-angle: 0deg; }
  to { --border-angle: 360deg; }
}

