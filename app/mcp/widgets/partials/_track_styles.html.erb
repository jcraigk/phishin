.track-list {
  max-height: 400px;
  overflow-y: auto;
  overflow-x: hidden;
  background: transparent;
  padding: 4px 3px 12px 12px;
  position: relative;
  z-index: 2;
  transition: max-height 0.3s ease;
  scrollbar-width: thin;
  scrollbar-color: rgba(109, 111, 113, 0.4) transparent;
  scrollbar-gutter: stable;
}

.card.expanded .track-list {
  max-height: none;
}

.section-title {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  padding: 6px 4px 6px;
}

.set-group:first-child .section-title {
  padding-top: 4px;
}

.title-left {
  font-size: 1.25rem;
  font-weight: 700;
  color: #515152;
}

.detail-right {
  font-size: 0.9rem;
  font-weight: 700;
  color: #515152;
}

.set-group:not(:first-child) {
  margin-top: 0.75rem;
}

.track {
  display: flex;
  align-items: center;
  padding: 6px 12px;
  font-size: 1.15rem;
  background: rgba(255, 255, 255, 0.8);
  color: #6d6f71;
  min-height: 2.25rem;
  position: relative;
  text-decoration: none;
  transition: background 0.15s ease;
  cursor: pointer;
  gap: 0.5rem;
}

.track-left {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.track-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  gap: 0.75rem;
}

.section-title + .track {
  border-radius: 0.5rem 0.5rem 0 0;
}

.track:last-child {
  border-radius: 0 0 0.5rem 0.5rem;
}

.section-title + .track:last-child {
  border-radius: 0.5rem;
}

.track:not(:last-child):not(.active-item)::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 1rem;
  right: 1rem;
  height: 1px;
  background-color: rgba(212, 213, 215, 0.8);
}

.track:not(.no-audio):hover {
  background: rgba(255, 255, 255, 1);
}

.track:not(.active-item):not(.no-audio):hover::after {
  display: none;
}

@keyframes pulse {
  0% { background-color: #ABD9FF; }
  50% { background-color: rgba(255, 255, 255, 0.8); }
  100% { background-color: #ABD9FF; }
}

.track.active-item {
  animation: pulse 3s infinite ease-in-out;
}

.track.active-item::after {
  display: none;
}

.track:has(+ .track.active-item)::after {
  display: none;
}

.track.no-audio {
  opacity: 0.5;
  cursor: not-allowed;
}

.track-title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.track-duration {
  font-size: 0.95rem;
  color: #6d6f71;
  font-variant-numeric: tabular-nums;
  flex-shrink: 0;
  width: 3.5rem;
  text-align: right;
}

.track-no-audio-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  color: #9a9b9d;
}

.track-no-audio-icon svg {
  width: 18px;
  height: 18px;
}

.track-list::-webkit-scrollbar {
  width: 6px;
}

.track-list::-webkit-scrollbar-track {
  background: transparent;
}

.track-list::-webkit-scrollbar-thumb {
  background: rgba(109, 111, 113, 0.4);
  border-radius: 3px;
}

.track-list::-webkit-scrollbar-thumb:hover {
  background: rgba(109, 111, 113, 0.6);
}

