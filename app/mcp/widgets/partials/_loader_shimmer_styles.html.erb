.loader-text {
  display: none;
}

.loader-logo-wrapper {
  position: relative;
  display: inline-block;
  line-height: 0;
}

.loader-logo {
  display: block;
}

.loader-logo-wrapper::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    transparent 40%,
    rgba(255, 255, 255, 0.7) 50%,
    transparent 60%,
    transparent 100%
  );
  background-size: 200% 100%;
  animation: logo-shimmer 1.5s infinite linear;
  -webkit-mask-image: url('<%= asset_host_placeholder %>/mcp-widgets/images/<%= logo_full_placeholder %>');
  mask-image: url('<%= asset_host_placeholder %>/mcp-widgets/images/<%= logo_full_placeholder %>');
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;
  -webkit-mask-position: top left;
  mask-position: top left;
}

@keyframes logo-shimmer {
  0% { background-position: 100% 50%; }
  100% { background-position: -100% 50%; }
}

