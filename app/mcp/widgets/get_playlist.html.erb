<% @title = "Phish.in Playlist" -%>
<%= partial("head") %>
  <style>
<%= partial("base_styles") %>

    .loader-text {
      display: none;
    }

    .loader-logo-wrapper {
      position: relative;
      display: inline-block;
      line-height: 0;
    }

    .loader-logo {
      display: block;
    }

    .loader-logo-wrapper::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent 0%,
        transparent 40%,
        rgba(255, 255, 255, 0.7) 50%,
        transparent 60%,
        transparent 100%
      );
      background-size: 200% 100%;
      animation: logo-shimmer 1.5s infinite linear;
      -webkit-mask-image: url('<%= asset_host_placeholder %>/mcp-widgets/images/logo-full.png');
      mask-image: url('<%= asset_host_placeholder %>/mcp-widgets/images/logo-full.png');
      -webkit-mask-size: 100% 100%;
      mask-size: 100% 100%;
      -webkit-mask-repeat: no-repeat;
      mask-repeat: no-repeat;
      -webkit-mask-position: top left;
      mask-position: top left;
    }

    @keyframes logo-shimmer {
      0% { background-position: 100% 50%; }
      100% { background-position: -100% 50%; }
    }

<%= partial("card_styles") %>
<%= partial("track_styles") %>
<%= partial("audio_player_styles") %>

    .playlist-header {
      height: 96px;
    }

    .playlist-info {
      display: flex;
      flex-direction: column;
      justify-content: center;
      min-width: 0;
      flex: 1;
      overflow: hidden;
    }

    .playlist-name {
      font-size: 1.5rem;
      font-weight: 700;
      color: #3a3a3a;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .playlist-name a {
      color: inherit;
      text-decoration: none;
      transition: color 0.15s;
    }

    .playlist-name a:hover {
      color: #03BBF2;
    }

    .playlist-meta {
      font-size: 0.95rem;
      color: #3a3a3a;
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .playlist-meta-item {
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .playlist-meta-item svg {
      width: 14px;
      height: 14px;
    }

    .playlist-description {
      font-size: 0.95rem;
      color: #6d6f71;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .playlist-logo-link {
      display: block;
      width: 76px;
      height: 76px;
      flex-shrink: 0;
      border-radius: 4px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.25);
      transition: box-shadow 0.2s, transform 0.2s;
    }

    .playlist-logo-link:hover {
      box-shadow: 0 4px 16px rgba(3, 187, 242, 0.4);
      transform: scale(1.02);
    }

    .playlist-logo {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .track-subtitle {
      font-size: 0.85rem;
      color: #9a9b9d;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      margin-top: 1px;
    }

    .track-date-link,
    .track-venue-link {
      color: #9a9b9d;
      text-decoration: none;
      transition: color 0.15s;
    }

    .track-date-link:hover,
    .track-venue-link:hover {
      color: #03BBF2;
    }

    .track-inline-tags {
      display: none;
      flex-wrap: nowrap;
      justify-content: flex-start;
      gap: 0.2rem;
      overflow: hidden;
      width: 180px;
      flex-shrink: 0;
    }

    .track-inline-tags .tag-badge {
      display: inline-block;
      padding: 0.1rem 0.35rem;
      background-color: #6d6f71;
      color: white;
      border-radius: 0.2rem;
      font-size: 0.6rem;
      font-weight: 700;
      white-space: nowrap;
    }

    @media (min-width: 500px) {
      .track-inline-tags {
        display: flex;
      }
    }

    .track:first-child {
      border-radius: 0.5rem 0.5rem 0 0;
      margin-top: 8px;
    }

    .track-position {
      width: 24px;
      text-align: center;
      font-size: 0.95rem;
      color: #9a9b9d;
      flex-shrink: 0;
    }

    .play-button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      border: none;
      cursor: pointer;
      transition: background 0.3s, opacity 0.5s, transform 0.2s;
      opacity: 1;
    }

    .play-button:hover {
      background: rgba(3, 187, 242, 0.7);
      transform: translate(-50%, -50%) scale(1.1);
    }

    .play-button.fade-out {
      opacity: 0;
      pointer-events: none;
    }

    .play-button svg {
      width: 24px;
      height: 24px;
      fill: rgba(255, 255, 255, 0.95);
      margin-left: 3px;
    }

    .logo-container {
      position: relative;
      width: 76px;
      height: 76px;
      flex-shrink: 0;
    }
  </style>
</head>
<body>
<div id="root">
  <div class="loader-container">
    <div class="loader-logo-wrapper">
      <img src="<%= asset_host_placeholder %>/mcp-widgets/images/logo-full.png" alt="Phish.in" class="loader-logo" />
    </div>
  </div>
</div>

  <script>
    (function() {
<%= partial("base_scripts") %>
<%= partial("audio_player_scripts") %>

      function renderPlaylist(playlist) {
        const tracks = playlist.tracks || [];
        allTracks = [];
        
        const hasAudio = tracks.some(t => t.mp3_url);

        let tracksHtml = '';
        tracks.forEach((track, index) => {
          const hasTrackAudio = !!track.mp3_url;
          const trackTags = track.tags || [];
          allTracks.push({
            ...track,
            subtitle: `${formatDate(track.date)} · ${track.venue}`,
            subtitleHtml: `<a href="${escapeHtml(track.show_url)}" target="_blank" rel="noopener" class="player-link">${formatDate(track.date)}</a> · <a href="${escapeHtml(track.venue_url || '')}" target="_blank" rel="noopener" class="player-link">${escapeHtml(track.venue)}</a>`
          });

          const tagsHtml = trackTags.length > 0 ? `
            <div class="track-inline-tags">
              ${trackTags.map(tag => `<span class="tag-badge">${escapeHtml(tag.name)}</span>`).join('')}
            </div>
          ` : '';
          
          tracksHtml += `
            <div class="track ${hasTrackAudio ? '' : 'no-audio'}" data-index="${index}" ${hasTrackAudio ? '' : 'title="No audio available"'}>
              <span class="track-position">${track.position || index + 1}</span>
              <div class="track-left">
                <div class="track-title">${escapeHtml(track.title)}</div>
                <div class="track-subtitle"><a href="${escapeHtml(track.show_url)}" target="_blank" rel="noopener" class="track-date-link">${formatDate(track.date)}</a> · <a href="${escapeHtml(track.venue_url || '')}" target="_blank" rel="noopener" class="track-venue-link">${escapeHtml(track.venue)}</a></div>
              </div>
              ${tagsHtml}
              <div class="track-right">
                <span class="track-duration">${track.duration_display || ''}</span>
              </div>
            </div>
          `;
        });

        const playlistUrl = playlist.url || 'https://phish.in';

        return `
          <div class="card ${hasAudio ? 'has-player' : ''}">
            <div class="blur-wrapper">
              <div class="background-blur" id="bg-blur"></div>
            </div>
            <%= partial("expand_icons").gsub("\n", "\n            ") %>
            <div class="card-content">
              <div class="card-header playlist-header">
                <div class="logo-container">
                  <a href="${escapeHtml(playlistUrl)}" target="_blank" rel="noopener" class="playlist-logo-link" title="View on Phish.in">
                    <img src="<%= asset_host_placeholder %>/mcp-widgets/images/logo-square.png" alt="Phish.in" class="playlist-logo" id="logo-img" />
                  </a>
                  ${hasAudio ? `<button class="play-button" id="header-play-btn" title="Play playlist">
                    <svg viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                  </button>` : ''}
                </div>
                <div class="playlist-info">
                  <div class="playlist-name"><a href="${escapeHtml(playlistUrl)}" target="_blank" rel="noopener">${truncateText(playlist.name, 100)}</a></div>
                  <div class="playlist-meta">
                    <span class="playlist-meta-item">
                      <svg viewBox="0 0 512 512" fill="currentColor">
                        <path d="M499.1 6.3c8.1 6 12.9 15.6 12.9 25.7v72V368c0 44.2-43 80-96 80s-96-35.8-96-80s43-80 96-80c11.2 0 22 1.6 32 4.6V147L192 223.8V432c0 44.2-43 80-96 80s-96-35.8-96-80s43-80 96-80c11.2 0 22 1.6 32 4.6V200 128c0-14.1 9.3-26.6 22.8-30.7l320-96c9.7-2.9 20.2-1.1 28.3 5z"/>
                      </svg>
                      ${playlist.track_count} tracks
                    </span>
                    <span class="playlist-meta-item">
                      <svg viewBox="0 0 512 512" fill="currentColor">
                        <path d="M256 0a256 256 0 1 1 0 512A256 256 0 1 1 256 0zM232 120V256c0 8 4 15.5 10.7 20l96 64c11 7.4 25.9 4.4 33.3-6.7s4.4-25.9-6.7-33.3L280 243.2V120c0-13.3-10.7-24-24-24s-24 10.7-24 24z"/>
                      </svg>
                      ${playlist.duration_display || formatDuration(playlist.duration_ms)}
                    </span>
                    ${playlist.username ? `<span class="playlist-meta-item">
                      <svg viewBox="0 0 448 512" fill="currentColor">
                        <path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/>
                      </svg>
                      ${escapeHtml(playlist.username)}
                    </span>` : ''}
                  </div>
                  ${playlist.description ? `<div class="playlist-description">${escapeHtml(playlist.description)}</div>` : ''}
                </div>
              </div>
              ${tracksHtml ? `<div class="track-list">${tracksHtml}</div>` : ''}
            </div>
            ${hasAudio ? `<%= partial("audio_player_html").gsub("\n", "\n            ") %>` : ''}
          </div>
        `;
      }

      function isDataComplete(data) {
        if (!data) return false;
        if (data.error) return true;
        return data.name && Array.isArray(data.tracks);
      }

      async function render() {
        const root = document.getElementById('root');
        
        try {
          const data = await waitForData(isDataComplete);

          if (!data) {
            root.innerHTML = renderNotFound('No playlist data available', 'Playlist');
            return;
          }

          if (data.error) {
            root.innerHTML = renderNotFound(data.message || 'Playlist not found', 'Playlist');
            return;
          }

          if (data.name) {
            root.innerHTML = renderPlaylist(data);
            setupBackgroundBlur(data.cover_art_url);
            initExpandButton();
            initAudioPlayer({
              showMetadata: {
                name: data.name,
                cover_art_url: data.cover_art_url,
                isPlaylist: true
              }
            });
          } else {
            root.innerHTML = renderNotFound('Playlist not found', 'Playlist');
          }
        } catch (e) {
          root.innerHTML = renderNotFound(e.message, 'Playlist');
        }
      }

      window.addEventListener('message', (event) => {
        if (event.data?.type === 'tool_output' || event.data?.structuredContent || event.data?.name) {
          window._widgetData = event.data.structuredContent || event.data;
          render();
        }
      });

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', render);
      } else {
        render();
      }
    })();
  </script>
</body>
</html>
