<% @title = "#{app_name_placeholder} Playlist" -%>
<%= partial("head") %>
  <style>
<%= partial("base_styles") %>
<%= partial("loader_shimmer_styles") %>
<%= partial("card_styles") %>
<%= partial("track_styles") %>
<%= partial("audio_player_styles") %>
<%= partial("modal_common_styles") %>
<%= partial("tag_styles") %>
<%= partial("track_menu_styles") %>

    .playlist-header {
      height: 96px;
    }

    .playlist-info {
      display: flex;
      flex-direction: column;
      justify-content: center;
      min-width: 0;
      flex: 1;
      overflow: hidden;
    }

    .playlist-name {
      font-size: 1.5rem;
      font-weight: 700;
      color: #3a3a3a;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      display: flex;
      align-items: center;
    }

    .playlist-name a {
      color: inherit;
      text-decoration: none;
      transition: color 0.15s;
    }

    .playlist-name a:hover {
      color: #03BBF2;
    }

    .playlist-meta {
      font-size: 0.95rem;
      color: #3a3a3a;
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .playlist-meta-item {
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .playlist-meta-item svg {
      width: 14px;
      height: 14px;
    }

    .playlist-logo-link {
      display: block;
      width: 76px;
      height: 76px;
      flex-shrink: 0;
      border-radius: 4px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.25);
      transition: box-shadow 0.2s, transform 0.2s;
    }

    .playlist-logo-link:hover {
      box-shadow: 0 4px 16px rgba(3, 187, 242, 0.4);
      transform: scale(1.02);
    }

    .playlist-logo {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .track-subtitle {
      font-size: 0.85rem;
      color: #9a9b9d;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      margin-top: 1px;
    }

    .track-date-link,
    .track-venue-link,
    .location-link {
      color: #9a9b9d;
      text-decoration: none;
      transition: color 0.15s;
    }

    .track-date-link:hover,
    .track-venue-link:hover,
    .location-link:hover {
      color: #03BBF2;
    }

    .playlist-description {
      font-size: 0.95rem;
      color: #6d6f71;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      cursor: pointer;
      transition: color 0.15s;
    }

    .playlist-description:hover {
      color: #03BBF2;
    }

    .description-modal {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 100;
      display: flex;
      flex-direction: column;
      padding: 16px;
      overflow-y: auto;
      border-radius: 0.5rem;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0s 0.3s;
    }

    .description-modal.visible {
      opacity: 1;
      visibility: visible;
      transition: opacity 0.3s ease, visibility 0s 0s;
    }

    .description-modal.with-player {
      bottom: 96px;
      border-radius: 0.5rem 0.5rem 0 0;
    }

    .description-modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
      position: relative;
      z-index: 1;
    }

    .description-modal-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #515152;
    }

    .description-modal-header .modal-close-btn {
      position: static;
    }

    .description-modal-content {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 0.5rem;
      position: relative;
      z-index: 1;
      padding: 16px;
      font-size: 1.1rem;
      color: #515152;
      line-height: 1.5;
      white-space: pre-wrap;
      flex: 1;
      overflow-y: auto;
    }

    .track:first-child {
      border-radius: 0.5rem 0.5rem 0 0;
      margin-top: 8px;
    }

    .track-position {
      width: 24px;
      text-align: center;
      font-size: 0.95rem;
      color: #9a9b9d;
      flex-shrink: 0;
    }

    .play-button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      border: none;
      cursor: pointer;
      transition: background 0.3s, opacity 0.5s, transform 0.2s;
      opacity: 1;
    }

    .play-button:hover {
      background: rgba(3, 187, 242, 0.7);
      transform: translate(-50%, -50%) scale(1.1);
    }

    .play-button.fade-out {
      opacity: 0;
      pointer-events: none;
    }

    .play-button svg {
      width: 24px;
      height: 24px;
      fill: rgba(255, 255, 255, 0.95);
      margin-left: 3px;
    }

    .logo-container {
      position: relative;
      width: 76px;
      height: 76px;
      flex-shrink: 0;
    }

  </style>
</head>
<body>
<div id="root">
  <div class="loader-container">
    <div class="loader-logo-wrapper">
      <img src="<%= asset_host_placeholder %>/mcp-widgets/images/<%= logo_full_placeholder %>" alt="<%= app_name_placeholder %>" class="loader-logo" />
    </div>
  </div>
</div>

  <script>
    (function() {
<%= partial("base_scripts") %>
<%= partial("audio_player_scripts") %>
<%= partial("init_track_menus") %>
<%= partial("init_tag_modal") %>

      function renderPlaylist(playlist) {
        const tracks = playlist.tracks || [];
        allTracks = [];
        
        const hasAudio = tracks.some(t => t.mp3_url);

        let tracksHtml = '';
        tracks.forEach((track, index) => {
          const hasTrackAudio = !!track.mp3_url;
          const trackTags = track.tags || [];
          allTracks.push({
            ...track,
            subtitle: `${formatDate(track.date)} · ${track.venue}`,
            subtitleHtml: `<a href="${escapeHtml(track.show_url)}" target="_blank" rel="noopener" class="player-link">${formatDate(track.date)}</a> · <a href="${escapeHtml(track.venue_url || '')}" target="_blank" rel="noopener" class="player-link">${escapeHtml(track.venue)}</a>`
          });

          const tagsHtml = trackTags.length > 0 ? `
            <div class="track-inline-tags" data-tags='${JSON.stringify(trackTags).replace(/'/g, "&#39;")}'>
              ${renderGroupedTagBadges(trackTags)}
            </div>
          ` : '';

          const trackUrl = track.url || '';
          let trackMenuHtml = '';
          if (hasTrackAudio) {
            trackMenuHtml = `
              <div class="track-menu-wrapper">
                <button class="track-menu-btn" data-track-index="${index}" title="Track options">•••</button>
                <div class="track-dropdown" id="track-dropdown-${index}">
                  <button class="track-dropdown-item share-link-btn" data-url="${escapeHtml(trackUrl)}">
                    <svg viewBox="0 0 512 512" fill="currentColor">
                      <path d="M307 34.8c-11.5 5.1-19 16.6-19 29.2v64H176C78.8 128 0 206.8 0 304C0 417.3 81.5 467.9 100.2 478.1c2.5 1.4 5.3 1.9 8.1 1.9c10.9 0 19.7-8.9 19.7-19.7c0-7.5-4.3-14.4-9.8-19.5C108.8 431.9 96 414.4 96 384c0-53 43-96 96-96h96v64c0 12.6 7.4 24.1 19 29.2s25 3.2 34.4-5.4l160-144c6.7-6.1 10.6-14.7 10.6-23.8s-3.8-17.7-10.6-23.8l-160-144c-9.4-8.5-22.9-10.6-34.4-5.4z"/>
                    </svg>
                    <span>Share</span>
                  </button>
                  ${trackTags.length > 0 ? `
                    <div class="tags-row clickable" data-tags='${JSON.stringify(trackTags).replace(/'/g, "&#39;")}'>
                      <svg class="tags-row-icon" viewBox="0 0 448 512" fill="currentColor">
                        <path d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"/>
                      </svg>
                      ${renderGroupedTagBadges(trackTags)}
                    </div>
                  ` : ''}
                </div>
              </div>
            `;
          }
          
          const venueLocationHtml = `<a href="${escapeHtml(track.venue_url || '')}" target="_blank" rel="noopener" class="track-venue-link">${escapeHtml(track.venue)}</a>${track.location ? ` · <a href="https://phish.in/map?term=${encodeURIComponent(track.location)}" target="_blank" rel="noopener" class="location-link">${escapeHtml(track.location)}</a>` : ''}`;

          tracksHtml += `
            <div class="track ${hasTrackAudio ? '' : 'no-audio'}" data-index="${index}" ${hasTrackAudio ? '' : 'title="No audio available"'}>
              <span class="track-position">${track.position || index + 1}</span>
              <div class="track-left">
                <div class="track-title">${escapeHtml(track.title)}</div>
                <div class="track-subtitle"><a href="${escapeHtml(track.show_url)}" target="_blank" rel="noopener" class="track-date-link">${formatDate(track.date)}</a> · ${venueLocationHtml}</div>
              </div>
              ${tagsHtml}
              <div class="track-right">
                <span class="track-duration">${track.duration_display || ''}</span>
                ${trackMenuHtml}
              </div>
            </div>
          `;
        });

        const playlistUrl = playlist.url || 'https://phish.in';

        const tagModalHtml = `
          <div class="tag-modal" id="tag-modal">
            <div class="modal-blur-wrapper"><div class="modal-blur" id="tag-modal-blur"></div></div>
            <div class="tag-modal-header">
              <span class="tag-modal-title" id="tag-modal-title"></span>
              <button class="modal-close-btn" id="tag-modal-close-btn" title="Close">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
            </div>
            <div class="tag-modal-content" id="tag-modal-content"></div>
          </div>
        `;

        const descriptionModalHtml = playlist.description ? `
          <div class="description-modal" id="description-modal">
            <div class="modal-blur-wrapper"><div class="modal-blur" id="description-modal-blur"></div></div>
            <div class="description-modal-header">
              <span class="description-modal-title"><svg viewBox="0 0 512 512" fill="currentColor" style="width: 18px; height: 18px; margin-right: 8px; vertical-align: -2px;"><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM216 336h24V272H216c-13.3 0-24-10.7-24-24s10.7-24 24-24h48c13.3 0 24 10.7 24 24v88h8c13.3 0 24 10.7 24 24s-10.7 24-24 24H216c-13.3 0-24-10.7-24-24s10.7-24 24-24zm40-208a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"/></svg>Description</span>
              <button class="modal-close-btn" id="description-modal-close-btn" title="Close">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
            </div>
            <div class="description-modal-content">${escapeHtml(playlist.description)}</div>
          </div>
        ` : '';

        return `
          <div class="card ${hasAudio ? 'has-player' : ''}">
            <div class="blur-wrapper">
              <div class="background-blur" id="bg-blur"></div>
            </div>
            <%= partial("expand_icons").gsub("\n", "\n            ") %>
            <div class="card-content">
              <div class="card-header playlist-header">
                <div class="logo-container">
                  <a href="${escapeHtml(playlistUrl)}" target="_blank" rel="noopener" class="playlist-logo-link" title="View on <%= app_name_placeholder %>">
                    <img src="<%= asset_host_placeholder %>/mcp-widgets/images/<%= logo_square_placeholder %>" alt="<%= app_name_placeholder %>" class="playlist-logo" id="logo-img" />
                  </a>
                  ${hasAudio ? `<button class="play-button" id="header-play-btn" title="Play playlist">
                    <svg viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                  </button>` : ''}
                </div>
                <div class="playlist-info">
                  <div class="playlist-name"><a href="${escapeHtml(playlistUrl)}" target="_blank" rel="noopener">${truncateText(playlist.name, 100)}</a></div>
                  <div class="playlist-meta">
                    <span class="playlist-meta-item">
                      <svg viewBox="0 0 512 512" fill="currentColor">
                        <path d="M499.1 6.3c8.1 6 12.9 15.6 12.9 25.7v72V368c0 44.2-43 80-96 80s-96-35.8-96-80s43-80 96-80c11.2 0 22 1.6 32 4.6V147L192 223.8V432c0 44.2-43 80-96 80s-96-35.8-96-80s43-80 96-80c11.2 0 22 1.6 32 4.6V200 128c0-14.1 9.3-26.6 22.8-30.7l320-96c9.7-2.9 20.2-1.1 28.3 5z"/>
                      </svg>
                      ${playlist.track_count} tracks
                    </span>
                    <span class="playlist-meta-item">
                      <svg viewBox="0 0 512 512" fill="currentColor">
                        <path d="M256 0a256 256 0 1 1 0 512A256 256 0 1 1 256 0zM232 120V256c0 8 4 15.5 10.7 20l96 64c11 7.4 25.9 4.4 33.3-6.7s4.4-25.9-6.7-33.3L280 243.2V120c0-13.3-10.7-24-24-24s-24 10.7-24 24z"/>
                      </svg>
                      ${playlist.duration_display || formatDuration(playlist.duration_ms)}
                    </span>
                    ${playlist.username ? `<span class="playlist-meta-item">
                      <svg viewBox="0 0 448 512" fill="currentColor">
                        <path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/>
                      </svg>
                      ${escapeHtml(playlist.username)}
                    </span>` : ''}
                  </div>
                  ${playlist.description ? `<div class="playlist-description" id="playlist-description" title="Click to read full description">${escapeHtml(playlist.description)}</div>` : ''}
                </div>
              </div>
              ${tracksHtml ? `<div class="track-list">${tracksHtml}</div>` : ''}
            </div>
            ${descriptionModalHtml}
            ${tagModalHtml}
            ${hasAudio ? `<%= partial("audio_player_html").gsub("\n", "\n            ") %>` : ''}
          </div>
          ${renderToast()}
        `;
      }

      function initDescriptionModal() {
        const descriptionEl = document.getElementById('playlist-description');
        const descriptionModal = document.getElementById('description-modal');
        const descriptionCloseBtn = document.getElementById('description-modal-close-btn');
        if (!descriptionEl || !descriptionModal) return;

        function updateModalPosition() {
          const player = document.getElementById('audio-player');
          if (player && player.classList.contains('visible')) {
            descriptionModal.classList.add('with-player');
          } else {
            descriptionModal.classList.remove('with-player');
          }
        }

        descriptionEl.addEventListener('click', (e) => {
          e.stopPropagation();
          updateModalPosition();
          descriptionModal.classList.add('visible');
        });

        const player = document.getElementById('audio-player');
        if (player) {
          const observer = new MutationObserver(() => {
            if (descriptionModal.classList.contains('visible')) {
              updateModalPosition();
            }
          });
          observer.observe(player, { attributes: true, attributeFilter: ['class'] });
        }

        descriptionCloseBtn?.addEventListener('click', (e) => {
          e.stopPropagation();
          descriptionModal.classList.remove('visible');
        });

        descriptionModal.addEventListener('click', (e) => {
          if (e.target === descriptionModal) {
            descriptionModal.classList.remove('visible');
          }
        });
      }

      let playlistData = null;

      function isDataComplete(data) {
        if (!data) return false;
        return data.name && Array.isArray(data.tracks);
      }

      async function render() {
        const root = document.getElementById('root');
        const data = await waitForData(isDataComplete);
        if (!data?.name) return;

        playlistData = data;
        root.innerHTML = renderPlaylist(data);
        setupBackgroundBlur(data.cover_art_url);
        
        const coverArtUrl = data.cover_art_url;
        if (coverArtUrl) {
          ['tag-modal-blur', 'description-modal-blur'].forEach(id => {
            const el = document.getElementById(id);
            if (el) el.style.backgroundImage = `url("${coverArtUrl}")`;
          });
        }
        
        initExpandButton();
        initAudioPlayer({
          showMetadata: {
            name: data.name,
            cover_art_url: data.cover_art_url,
            isPlaylist: true
          }
        });
        initTrackMenus();
        initDescriptionModal();
        initTagModal();
      }

      window.addEventListener('message', (event) => {
        if (event.data?.type === 'tool_output' || event.data?.structuredContent || event.data?.name) {
          window._widgetData = event.data.structuredContent || event.data;
          render();
        }
      });

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          render();
          initKeyboardShortcuts();
        });
      } else {
        render();
        initKeyboardShortcuts();
      }
    })();
  </script>
</body>
</html>
