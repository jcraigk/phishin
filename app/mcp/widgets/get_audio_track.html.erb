      function getCurrentTrackDuration() {
        const tracksWithAudio = getTracksWithAudio();
        if (!gaplessPlayer || tracksWithAudio.length === 0) return 0;
        const gaplessIndex = gaplessPlayer.getIndex();
        const track = tracksWithAudio[gaplessIndex];
        return track?.duration_ms ? track.duration_ms / 1000 : 0;
      }

      function scrub(seconds) {
        if (!gaplessPlayer) return;

        const currentPosition = gaplessPlayer.getPosition();
        if (currentPosition < 0) return;

        const duration = getCurrentTrackDuration();
        if (duration <= 0) return;

        const currentTime = currentPosition / 1000;
        const newTime = currentTime + seconds;
        const clampedTime = Math.max(0, Math.min(newTime, duration));

        gaplessPlayer.setPosition(clampedTime * 1000);
      }

      function onScrubberClick(e) {
        if (!gaplessPlayer) return;

        const duration = getCurrentTrackDuration();
        if (duration <= 0) return;

        const rect = e.currentTarget.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const percent = Math.max(0, Math.min(1, x / rect.width));
        const newTime = percent * duration;

        const progress = percent * 100;
        const progressOverlay = document.getElementById('progress-overlay');
        if (progressOverlay) {
          progressOverlay.style.setProperty('background', `linear-gradient(to right, var(--progress-color, #b0b0b0) ${progress}%, rgba(255,255,255,0) ${progress}%)`, 'important');
        }

        const elapsedEl = document.getElementById('elapsed-time');
        const remainingEl = document.getElementById('remaining-time');
        if (elapsedEl) elapsedEl.textContent = formatTime(newTime);
        if (remainingEl) remainingEl.textContent = `-${formatTime(duration - newTime)}`;

        const scrubForwardBtn = document.getElementById('scrub-forward-btn');
        if (scrubForwardBtn) scrubForwardBtn.disabled = newTime >= duration - 10;

        gaplessPlayer.setPosition(newTime * 1000);

        if (!isPlaying) {
          showLoadingSpinner(true);
          gaplessPlayer.play();
          fadeOutCoverPlayButton();
        }
      }

