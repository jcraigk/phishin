      async function requestAdjacentShow(direction) {
        if (!showData?.date || isNavigating) return;
        
        isNavigating = true;
        
        if (gaplessPlayer) {
          gaplessPlayer.stop();
          gaplessPlayer = null;
        }
        isPlaying = false;
        isAudioLoading = false;
        
        const root = document.getElementById('root');
        root.innerHTML = renderLoader();
        
        try {
          const currentShowResponse = await fetch(`${baseUrl}/api/v2/shows/${showData.date}`);
          if (!currentShowResponse.ok) throw new Error('Failed to fetch current show');
          const currentShow = await currentShowResponse.json();
          
          const adjacentDate = direction === 'next' 
            ? currentShow.next_show_date_with_audio 
            : currentShow.previous_show_date_with_audio;
          if (!adjacentDate) throw new Error('No adjacent show found');
          
          const adjacentShowResponse = await fetch(`${baseUrl}/api/v2/shows/${adjacentDate}`);
          if (!adjacentShowResponse.ok) throw new Error('Failed to fetch adjacent show');
          const adjacentShow = await adjacentShowResponse.json();
          
          const rawTracks = (adjacentShow.tracks || []).filter(t => t.mp3_url);
          const setPositions = computeSetPositions(rawTracks);
          const newShowData = {
            date: adjacentShow.date,
            show_url: `${baseUrl}/${adjacentShow.date}`,
            venue: adjacentShow.venue_name,
            venue_slug: adjacentShow.venue?.slug,
            location: adjacentShow.venue ? `${adjacentShow.venue.city}, ${adjacentShow.venue.state || adjacentShow.venue.country}` : '',
            cover_art_url: adjacentShow.cover_art_urls?.medium,
            duration_ms: adjacentShow.duration,
            tracks: rawTracks.map((t, idx) => ({
              id: t.id,
              title: t.title,
              slug: t.slug,
              url: `${baseUrl}/${adjacentShow.date}/${t.slug}`,
              set: t.set_name,
              position: setPositions[idx] || t.position,
              duration_ms: t.duration,
              mp3_url: t.mp3_url,
              waveform_image_url: t.waveform_image_url,
              tags: (t.tags || []).map(tag => ({ name: tag.name, slug: tag.slug, description: tag.description, notes: tag.notes }))
            }))
          };
          
          const targetTrackIndex = direction === 'next' ? 0 : newShowData.tracks.length - 1;
          const targetTrack = newShowData.tracks[targetTrackIndex];
          if (!targetTrack) throw new Error('No playable tracks in adjacent show');
          
          showData = newShowData;
          currentTrackIndex = targetTrackIndex;
          updateCurrentTrackData(targetTrack);
          
          root.innerHTML = renderPlayerPlaying(trackData);
          showLoadingSpinner(true);
          
          const gaplessIndex = findGaplessIndex(currentTrackIndex);
          initAudioOnly(trackData, gaplessIndex);
          
          setupBackgroundBlur(trackData.cover_art_url);
          initTagTooltips();
          initSetPositionTooltips();
          wireUpPlayerControls();
          updateWaveformImage(targetTrack.waveform_image_url);
          initMediaSession(trackData);
          updateNavigationButtons();
          
        } catch (e) {
          if (showData && trackData) {
            root.innerHTML = renderPlayer(trackData);
            if (trackData.mp3_url) {
              const gaplessIndex = findGaplessIndex(currentTrackIndex);
              initGaplessPlayer(trackData, gaplessIndex, false);
            }
          }
        } finally {
          isNavigating = false;
        }
      }
      
      function initAudioOnly(track, startingIndex) {
        if (!track?.mp3_url) {
          return;
        }
        
        trackData = track;
        const tracksWithAudio = getTracksWithAudio();
        if (tracksWithAudio.length === 0) {
          return;
        }
        
        const trackUrls = tracksWithAudio.map(t => t.mp3_url);
        const iosDevice = isIOSDevice();
        const gaplessIndex = startingIndex >= 0 && startingIndex < tracksWithAudio.length ? startingIndex : 0;
        
        gaplessPlayer = new Gapless5({
          tracks: trackUrls,
          startingTrack: gaplessIndex,
          loop: false,
          singleMode: false,
          useWebAudio: !iosDevice,
          useHTML5Audio: true,
          loadLimit: iosDevice ? 2 : 1,
          volume: 1.0
        });
        
        gaplessPlayer.ontimeupdate = (currentTimeMs, idx) => {
          const currentTrack = tracksWithAudio[idx];
          if (!currentTrack) return;
          const currentTime = currentTimeMs / 1000;
          const duration = currentTrack.duration_ms ? currentTrack.duration_ms / 1000 : 0;
          if (duration <= 0) return;
          const progress = (currentTime / duration) * 100;
          const progressOverlay = document.getElementById('progress-overlay');
          if (progressOverlay) {
            progressOverlay.style.setProperty('background', `linear-gradient(to right, var(--progress-color, #b0b0b0) ${progress}%, rgba(255,255,255,0) ${progress}%)`, 'important');
          }
          const elapsedEl = document.getElementById('elapsed-time');
          const remainingEl = document.getElementById('remaining-time');
          if (elapsedEl) elapsedEl.textContent = formatTime(currentTime);
          if (remainingEl) remainingEl.textContent = `-${formatTime(duration - currentTime)}`;
          const scrubForwardBtn = document.getElementById('scrub-forward-btn');
          if (scrubForwardBtn) scrubForwardBtn.disabled = currentTime >= duration - 10;
        };
        
        gaplessPlayer.onplay = () => {
          isPlaying = true;
          isAudioLoading = false;
          document.getElementById('audio-player')?.classList.add('audio-playing');
          showLoadingSpinner(false);
          updatePlayPauseIcon();
          updateMediaSessionPlaybackState();
        };
        
        gaplessPlayer.onpause = () => {
          isPlaying = false;
          document.getElementById('audio-player')?.classList.remove('audio-playing');
          updatePlayPauseIcon();
          updateMediaSessionPlaybackState();
        };
        
        gaplessPlayer.onstop = () => {
          isPlaying = false;
          isAudioLoading = false;
          document.getElementById('audio-player')?.classList.remove('audio-playing');
          updatePlayPauseIcon();
        };
        
        gaplessPlayer.onnext = () => {
          const idx = gaplessPlayer.getIndex();
          const originalIndex = findOriginalIndex(idx);
          if (originalIndex >= 0) {
            currentTrackIndex = originalIndex;
            const nextTrack = showData.tracks[originalIndex];
            updateCurrentTrackData(nextTrack);
            updateTrackDisplay(trackData);
            initTagTooltips();
            initSetPositionTooltips();
            updateWaveformImage(nextTrack.waveform_image_url);
            updateNavigationButtons();
            initMediaSession(trackData);
          }
        };
        
        gaplessPlayer.onprev = () => {
          const idx = gaplessPlayer.getIndex();
          const originalIndex = findOriginalIndex(idx);
          if (originalIndex >= 0) {
            currentTrackIndex = originalIndex;
            const prevTrack = showData.tracks[originalIndex];
            updateCurrentTrackData(prevTrack);
            updateTrackDisplay(trackData);
            initTagTooltips();
            initSetPositionTooltips();
            updateWaveformImage(prevTrack.waveform_image_url);
            updateNavigationButtons();
            initMediaSession(trackData);
          }
        };
        
        gaplessPlayer.onfinishedtrack = () => {};
        
        gaplessPlayer.onfinishedall = () => {};
        
        gaplessPlayer.onerror = () => {
          showLoadingSpinner(false);
        };
        
        isAudioLoading = true;
        gaplessPlayer.play();
      }
      
