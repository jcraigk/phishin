      async function playPrev() {
        if (isNavigating) return;
        if (showData?.tracks && currentTrackIndex > 0) {
          playTrackAtIndex(currentTrackIndex - 1);
        } else {
          await requestAdjacentShow('prev');
        }
      }

      async function playNext() {
        if (isNavigating) return;
        if (showData?.tracks && currentTrackIndex < showData.tracks.length - 1) {
          playTrackAtIndex(currentTrackIndex + 1);
        } else {
          await requestAdjacentShow('next');
        }
