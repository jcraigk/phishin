<% @title = "Phish.in Track" -%>
<%= partial("head") %>
  <style>
<%= partial("base_styles") %>
<%= partial("loader_shimmer_styles") %>

    .loader-container {
      height: 92px;
      min-height: 92px;
      max-height: 92px;
      gap: 0;
      overflow: hidden;
    }

    .audio-player {
      position: relative;
      background: #d4d5d7;
      border-radius: 0.5rem;
      box-shadow: 0 2px 12px rgba(0,0,0,0.2);
      display: flex;
      height: 92px;
      min-height: 92px;
      max-height: 92px;
      overflow: hidden;
    }

    .player-content {
      display: flex;
      flex: 1;
      min-width: 0;
      overflow: hidden;
      position: relative;
      z-index: 1;
      background: rgba(180, 180, 180, 0.5);
      backdrop-filter: blur(12px) saturate(1.3);
      -webkit-backdrop-filter: blur(12px) saturate(1.3);
      border-radius: 0.5rem;
    }

    .blur-wrapper {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      overflow: hidden;
      border-radius: 0.5rem;
      pointer-events: none;
      z-index: 0;
    }

    .background-blur {
      position: absolute;
      top: -50px;
      left: -50px;
      right: -50px;
      height: 2000px;
      background-size: 100% auto;
      background-position: top center;
      background-repeat: repeat-y;
      filter: blur(100px);
      opacity: 0.8;
      z-index: 0;
    }

    .player-cover-art {
      width: 76px;
      height: 76px;
      border-radius: 4px;
      object-fit: cover;
      box-shadow: 0 2px 8px rgba(0,0,0,0.25);
      display: block;
    }

    .cover-play-button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      border: none;
      cursor: pointer;
      transition: background 0.3s, opacity 0.5s, transform 0.2s;
      opacity: 1;
    }

    .cover-play-button:hover {
      background: rgba(3, 187, 242, 0.7);
      transform: translate(-50%, -50%) scale(1.1);
    }

    .cover-play-button.fade-out {
      opacity: 0;
      pointer-events: none;
    }

    .cover-play-button svg {
      width: 24px;
      height: 24px;
      fill: rgba(255, 255, 255, 0.95);
      margin-left: 3px;
    }

    .player-main {
      flex: 1;
      min-width: 0;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      position: relative;
      z-index: 1;
    }

    .player-top-row {
      display: flex;
      align-items: center;
      gap: 8px;
      flex: 1;
      min-width: 0;
      padding: 6px 10px 2px 0;
      position: relative;
      overflow: hidden;
    }

    .player-cover-art-container {
      position: relative;
      flex-shrink: 0;
      padding: 8px;
      z-index: 1;
      display: flex;
      align-items: center;
      width: 92px;
      height: 92px;
    }

    .cover-loading-overlay {
      position: absolute;
      top: 8px;
      left: 8px;
      right: 8px;
      bottom: 8px;
      border-radius: 4px;
      background: rgba(0, 0, 0, 0.5);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 5;
    }

    .cover-loading-overlay.visible {
      display: flex;
    }

    .cover-loading-overlay.visible + .cover-play-button {
      opacity: 0;
      pointer-events: none;
    }

    .cover-loading-spinner {
      width: 28px;
      height: 28px;
      border: 3px solid rgba(255, 255, 255, 0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: cover-spin 0.6s linear infinite;
    }

    @keyframes cover-spin {
      to { transform: rotate(360deg); }
    }

    .player-track-info {
      flex: 1;
      min-width: 0;
      overflow: hidden;
    }

    .player-track-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #3a3a3a;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .player-track-title a {
      color: inherit;
      text-decoration: none;
      transition: color 0.15s;
    }

    .player-track-title a:hover {
      color: #03BBF2;
    }

    .player-track-subtitle {
      font-size: 0.95rem;
      color: #3a3a3a;
      line-height: 1.4;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .player-track-subtitle .player-link,
    .player-track-subtitle .location-link {
      color: #3a3a3a;
      text-decoration: none;
      transition: color 0.15s;
    }

    .player-track-subtitle .player-link:hover,
    .player-track-subtitle .location-link:hover {
      color: #03BBF2;
    }

    .set-position {
      cursor: pointer;
      border-bottom: 1px dotted #888;
      position: relative;
    }

    .set-position[data-tooltip]:hover {
      z-index: 100;
    }

    .set-position[data-tooltip]:hover .set-position-tooltip {
      opacity: 1;
      visibility: visible;
    }

    .set-position-tooltip {
      position: fixed;
      background-color: #515152;
      color: white;
      padding: 0.4rem 0.6rem;
      border-radius: 0.35rem;
      font-size: 0.75rem;
      font-weight: 400;
      line-height: 1.3em;
      white-space: nowrap;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.15s, visibility 0.15s;
      z-index: 9999;
      pointer-events: none;
      box-shadow: 0 2px 8px rgba(0,0,0,0.25);
    }

    .set-position-tooltip::before {
      content: '';
      position: absolute;
      top: 50%;
      left: -4px;
      transform: translateY(-50%) rotate(45deg);
      width: 8px;
      height: 8px;
      background-color: inherit;
    }

    .tag-badge {
      display: inline-block;
      padding: 0.1rem 0.35rem;
      background-color: #6d6f71;
      color: white;
      border-radius: 0.2rem;
      font-size: 0.6rem;
      font-weight: 700;
      white-space: nowrap;
      vertical-align: middle;
      margin-left: 2px;
      margin-top: -4px;
      position: relative;
    }

    .tag-badge[data-tooltip] {
      cursor: pointer;
    }

    .tag-badge[data-tooltip]:hover {
      z-index: 100;
    }

    .tag-badge[data-tooltip]:hover .tag-tooltip {
      opacity: 1;
      visibility: visible;
    }

    .tag-tooltip {
      position: fixed;
      background-color: #515152;
      color: white;
      padding: 0.5rem 0.75rem;
      border-radius: 0.35rem;
      font-size: 0.75rem;
      font-weight: 400;
      line-height: 1.3em;
      white-space: normal;
      max-width: 200px;
      text-align: left;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.15s, visibility 0.15s;
      z-index: 9999;
      pointer-events: none;
      box-shadow: 0 2px 8px rgba(0,0,0,0.25);
      word-wrap: break-word;
    }

    .tag-tooltip::before {
      content: '';
      position: absolute;
      top: 50%;
      left: -4px;
      transform: translateY(-50%) rotate(45deg);
      width: 8px;
      height: 8px;
      background-color: inherit;
    }


    .player-controls {
      display: flex;
      align-items: center;
      gap: 4px;
      flex-shrink: 0;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
    }

    .player-controls.visible {
      opacity: 1;
      pointer-events: auto;
      position: static;
      transform: none;
    }

    .skip-btn {
      background: none;
      border: none;
      padding: 6px;
      cursor: pointer;
      color: #505050;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: color 0.15s;
    }

    .skip-btn:hover:not(:disabled) {
      color: #03BBF2;
    }

    .skip-btn:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    .skip-btn svg {
      width: 20px;
      height: 20px;
    }

    .scrub-btn {
      background: none;
      border: none;
      padding: 6px;
      cursor: pointer;
      color: #505050;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: color 0.15s;
      position: relative;
    }

    .scrub-btn:hover:not(:disabled) {
      color: #03BBF2;
    }

    .scrub-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .scrub-btn svg {
      width: 20px;
      height: 20px;
    }

    .play-pause-btn {
      width: 38px;
      height: 38px;
      background: #505050;
      border: none;
      border-radius: 50%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      transition: background 0.15s;
      margin: 0 2px;
    }

    .play-pause-btn:hover:not(:disabled) {
      background: #404040;
    }

    .play-pause-btn:disabled {
      opacity: 0.7;
      cursor: not-allowed;
      background: #707070;
    }

    .audio-player.audio-playing .play-pause-btn {
      background: #03BBF2;
    }

    .audio-player.audio-playing .play-pause-btn:hover:not(:disabled) {
      background: #02a8da;
    }

    .play-pause-btn svg {
      width: 18px;
      height: 18px;
    }

    .play-pause-btn .play-icon {
      margin-left: 3px;
    }

    .player-bottom-row {
      display: flex;
      align-items: center;
      gap: 8px;
      height: 32px;
      min-width: 0;
      padding: 0 10px 2px 0;
    }

    .no-audio-message {
      color: #b65b5b;
      font-weight: 700;
      font-size: 0.85rem;
      margin-top: 2px;
    }

    .time-display {
      font-size: 0.95rem;
      color: #505050;
      font-variant-numeric: tabular-nums;
      min-width: 38px;
      flex-shrink: 0;
      text-align: left;
    }

    .time-display.remaining {
      text-align: right;
    }

    .scrubber-container {
      flex: 1;
      min-width: 0;
      height: 100%;
      position: relative;
      cursor: pointer;
      margin-left: -6px;
      --waveform-url: none;
    }

    .scrubber-container::before {
      content: '';
      position: absolute;
      inset: 0;
      background: #505050;
      mask-image: var(--waveform-url);
      mask-size: 100% 80%;
      mask-repeat: no-repeat;
      mask-position: top center;
      mask-mode: alpha;
      -webkit-mask-image: var(--waveform-url);
      -webkit-mask-size: 100% 80%;
      -webkit-mask-repeat: no-repeat;
      -webkit-mask-position: top center;
      opacity: 0;
      transition: opacity 0.15s ease;
    }

    .scrubber-container.loaded::before {
      opacity: 1;
    }

    .progress-overlay {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      background: linear-gradient(to right, var(--progress-color, #b0b0b0) 0%, rgba(255,255,255,0) 0%);
      mask-size: 100% 80%;
      mask-repeat: no-repeat;
      mask-position: top center;
      mask-mode: alpha;
      -webkit-mask-size: 100% 80%;
      -webkit-mask-repeat: no-repeat;
      -webkit-mask-position: top center;
      opacity: 0;
      transition: opacity 0.15s ease;
    }

    .audio-player.audio-playing .progress-overlay {
      --progress-color: #03BBF2;
    }

    .scrubber-container.loaded .progress-overlay {
      opacity: 1;
    }

    .play-pause-btn {
      position: relative;
    }

    .loading-spinner {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 18px;
      height: 18px;
      border: 2.5px solid rgba(255, 255, 255, 0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: spin 0.6s linear infinite;
    }

    @keyframes spin {
      to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @property --border-angle {
      syntax: '<angle>';
      initial-value: 0deg;
      inherits: false;
    }

    .audio-player.audio-playing .player-content::after {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: 0.5rem;
      padding: 4px;
      background: conic-gradient(
        from var(--border-angle),
        transparent 0%,
        transparent 11%,
        rgba(3, 187, 242, 0.3) 20%,
        rgba(3, 187, 242, 0.6) 35%,
        rgba(225, 245, 255, 0.9) 50%,
        rgba(3, 187, 242, 0.6) 65%,
        rgba(3, 187, 242, 0.3) 80%,
        transparent 89%,
        transparent 100%
      );
      -webkit-mask: 
        linear-gradient(#fff 0 0) content-box, 
        linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      pointer-events: none;
      z-index: 100;
      animation: rotate-gradient 3.2s linear infinite;
    }

    @keyframes rotate-gradient {
      from { --border-angle: 0deg; }
      to { --border-angle: 360deg; }
    }

  </style>
</head>
<body>
<div id="root">
  <div class="loader-container">
    <div class="loader-logo-wrapper">
      <img src="<%= asset_host_placeholder %>/mcp-widgets/images/logo-full.png" alt="Phish.in" class="loader-logo" />
    </div>
  </div>
</div>

  <script>
    (function() {
<%= partial("base_scripts") %>

      function initTagTooltips() {
        document.querySelectorAll('.tag-badge[data-tooltip]').forEach(badge => {
          const tooltip = badge.querySelector('.tag-tooltip');
          if (!tooltip) return;

          badge.addEventListener('mouseenter', () => {
            const rect = badge.getBoundingClientRect();
            tooltip.style.left = (rect.right + 8) + 'px';
            tooltip.style.top = (rect.top + rect.height / 2) + 'px';
            tooltip.style.transform = 'translateY(-50%)';
          });
        });
      }

      function initSetPositionTooltips() {
        document.querySelectorAll('.set-position[data-tooltip]').forEach(el => {
          const tooltip = el.querySelector('.set-position-tooltip');
          if (!tooltip) return;

          el.addEventListener('mouseenter', () => {
            const rect = el.getBoundingClientRect();
            tooltip.style.left = (rect.right + 8) + 'px';
            tooltip.style.top = (rect.top + rect.height / 2) + 'px';
            tooltip.style.transform = 'translateY(-50%)';
          });
        });
      }

      let gaplessPlayer = null;
      let isPlaying = false;
      let isAudioLoading = false;
      let isNavigating = false;
      let trackData = null;
      let showData = null;
      let currentTrackIndex = 0;
      let baseUrl = 'https://phish.in';

      function isIOSDevice() {
        return /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;
      }

      function getTracksWithAudio() {
        if (!showData?.tracks) return [];
        return showData.tracks.filter(t => t.mp3_url);
      }

      function findGaplessIndex(originalIndex) {
        if (!showData?.tracks) return -1;
        const track = showData.tracks[originalIndex];
        if (!track?.mp3_url) return -1;
        const tracksWithAudio = getTracksWithAudio();
        return tracksWithAudio.findIndex(t => t.mp3_url === track.mp3_url);
      }

      function findOriginalIndex(gaplessIndex) {
        const tracksWithAudio = getTracksWithAudio();
        if (gaplessIndex < 0 || gaplessIndex >= tracksWithAudio.length) return -1;
        const track = tracksWithAudio[gaplessIndex];
        if (!showData?.tracks) return -1;
        return showData.tracks.findIndex(t => t.mp3_url === track.mp3_url);
      }

      function computeSetPositions(tracks) {
        const setGroups = {};
        tracks.forEach((t, idx) => {
          const set = t.set || t.set_name || '';
          if (!setGroups[set]) setGroups[set] = [];
          setGroups[set].push({ idx, position: t.position });
        });
        const positions = {};
        Object.values(setGroups).forEach(group => {
          group.sort((a, b) => a.position - b.position);
          group.forEach((item, setIdx) => {
            positions[item.idx] = setIdx + 1;
          });
        });
        return positions;
      }

      function initGaplessPlayer(initialTrack, startingIndex = 0, autoPlay = false) {
        if (!initialTrack?.mp3_url) return;

        trackData = initialTrack;

        const tracksWithAudio = getTracksWithAudio();
        if (tracksWithAudio.length === 0) return;

        const trackUrls = tracksWithAudio.map(t => t.mp3_url);
        const iosDevice = isIOSDevice();

        if (gaplessPlayer) {
          gaplessPlayer.stop();
          gaplessPlayer = null;
        }

        const gaplessIndex = startingIndex >= 0 && startingIndex < tracksWithAudio.length ? startingIndex : 0;

        gaplessPlayer = new Gapless5({
          tracks: trackUrls,
          startingTrack: gaplessIndex,
          loop: false,
          singleMode: false,
          useWebAudio: !iosDevice,
          useHTML5Audio: true,
          loadLimit: iosDevice ? 2 : 1,
          volume: 1.0
        });

        gaplessPlayer.ontimeupdate = (currentTimeMs, gaplessIndex) => {
          const track = tracksWithAudio[gaplessIndex];
          if (!track) return;

          const currentTime = currentTimeMs / 1000;
          const duration = track.duration_ms ? track.duration_ms / 1000 : 0;
          if (duration <= 0) return;

          const progress = (currentTime / duration) * 100;

          const progressOverlay = document.getElementById('progress-overlay');
          if (progressOverlay) {
            progressOverlay.style.setProperty('background', `linear-gradient(to right, var(--progress-color, #b0b0b0) ${progress}%, rgba(255,255,255,0) ${progress}%)`, 'important');
          }

          const elapsedEl = document.getElementById('elapsed-time');
          const remainingEl = document.getElementById('remaining-time');
          if (elapsedEl) elapsedEl.textContent = formatTime(currentTime);
          if (remainingEl) remainingEl.textContent = `-${formatTime(duration - currentTime)}`;

          const scrubForwardBtn = document.getElementById('scrub-forward-btn');
          if (scrubForwardBtn) scrubForwardBtn.disabled = currentTime >= duration - 10;
        };

        gaplessPlayer.onplay = () => {
          isPlaying = true;
          document.getElementById('audio-player')?.classList.add('audio-playing');
          showLoadingSpinner(false);
          updatePlayPauseIcon();
          fadeOutCoverPlayButton();
          updateMediaSessionPlaybackState();
        };

        gaplessPlayer.onpause = () => {
          isPlaying = false;
          document.getElementById('audio-player')?.classList.remove('audio-playing');
          updatePlayPauseIcon();
          updateMediaSessionPlaybackState();
        };

        gaplessPlayer.onstop = () => {
          isPlaying = false;
          isAudioLoading = false;
          document.getElementById('audio-player')?.classList.remove('audio-playing');
          updatePlayPauseIcon();
        };

        gaplessPlayer.onnext = () => {
          const gaplessIndex = gaplessPlayer.getIndex();
          const originalIndex = findOriginalIndex(gaplessIndex);
          if (originalIndex >= 0) {
            currentTrackIndex = originalIndex;
            const track = showData.tracks[originalIndex];
            updateCurrentTrackData(track);
            updateTrackDisplay(trackData);
            initTagTooltips();
            initSetPositionTooltips();
            updateWaveformImage(track.waveform_image_url);
            updateNavigationButtons();
            initMediaSession(trackData);
          }
        };

        gaplessPlayer.onprev = () => {
          const gaplessIndex = gaplessPlayer.getIndex();
          const originalIndex = findOriginalIndex(gaplessIndex);
          if (originalIndex >= 0) {
            currentTrackIndex = originalIndex;
            const track = showData.tracks[originalIndex];
            updateCurrentTrackData(track);
            updateTrackDisplay(trackData);
            initTagTooltips();
            initSetPositionTooltips();
            updateWaveformImage(track.waveform_image_url);
            updateNavigationButtons();
            initMediaSession(trackData);
          }
        };

        gaplessPlayer.onfinishedtrack = () => {};

        gaplessPlayer.onfinishedall = () => {};

        gaplessPlayer.onerror = () => {
          showLoadingSpinner(false);
        };

        const playPauseBtn = document.getElementById('play-pause-btn');
        const scrubber = document.getElementById('scrubber');
        const scrubBackBtn = document.getElementById('scrub-back-btn');
        const scrubForwardBtn = document.getElementById('scrub-forward-btn');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');

        playPauseBtn?.addEventListener('click', togglePlayPause);
        scrubBackBtn?.addEventListener('click', () => scrub(-10));
        scrubForwardBtn?.addEventListener('click', () => scrub(10));
        scrubber?.addEventListener('click', onScrubberClick);
        prevBtn?.addEventListener('click', playPrev);
        nextBtn?.addEventListener('click', playNext);

        if (playPauseBtn) playPauseBtn.disabled = false;
        if (scrubBackBtn) scrubBackBtn.disabled = false;
        if (scrubForwardBtn) scrubForwardBtn.disabled = true;

        initCoverPlayButton();
        initMediaSession(initialTrack);
        updateNavigationButtons();
        updateWaveformImage(initialTrack.waveform_image_url);

        if (autoPlay && gaplessPlayer) {
          showLoadingSpinner(true);
          gaplessPlayer.play();
        }
      }

      function updateCurrentTrackData(track) {
        trackData = {
          title: track.title,
          slug: track.slug,
          url: track.url,
          date: showData.date,
          show_url: showData.show_url,
          mp3_url: track.mp3_url,
          duration_ms: track.duration_ms,
          waveform_image_url: track.waveform_image_url,
          venue: showData.venue,
          venue_slug: showData.venue_slug,
          location: showData.location,
          cover_art_url: showData.cover_art_url,
          tags: track.tags || [],
          set: track.set,
          position: track.position
        };
      }

      let currentWaveformImage = null;
      
      function updateWaveformImage(waveformUrl, onComplete) {
        const scrubber = document.getElementById('scrubber');
        const progressOverlay = document.getElementById('progress-overlay');

        if (currentWaveformImage) {
          currentWaveformImage.onload = null;
          currentWaveformImage.onerror = null;
          currentWaveformImage = null;
        }

        if (!waveformUrl) {
          if (scrubber) {
            scrubber.style.setProperty('--waveform-url', 'none');
            scrubber.classList.remove('loaded');
          }
          if (progressOverlay) {
            progressOverlay.style.maskImage = 'none';
            progressOverlay.style.webkitMaskImage = 'none';
          }
          if (onComplete) onComplete();
          return;
        }

        scrubber?.classList.remove('loaded');
        if (progressOverlay) {
          progressOverlay.style.setProperty('background', 'linear-gradient(to right, var(--progress-color, #b0b0b0) 0%, rgba(255,255,255,0) 0%)', 'important');
        }

        const img = new Image();
        currentWaveformImage = img;
        
        img.onload = () => {
          if (currentWaveformImage !== img) return;
          
          const maskUrl = `url(${waveformUrl})`;
          if (scrubber) {
            scrubber.style.setProperty('--waveform-url', maskUrl);
            scrubber.classList.add('loaded');
          }
          if (progressOverlay) {
            progressOverlay.style.maskImage = maskUrl;
            progressOverlay.style.webkitMaskImage = maskUrl;
          }
          if (onComplete) onComplete();
        };
        
        img.onerror = () => {
          if (onComplete) onComplete();
        };
        
        img.src = waveformUrl;
      }

      function togglePlayPause() {
        if (!gaplessPlayer) return;
        if (!isPlaying) {
          showLoadingSpinner(true);
        }
