                  </button>
                  <button class="scrub-btn scrub-back" id="scrub-back-btn" disabled title="Back 10 seconds (Shift+←)">
                    <svg viewBox="0 0 512 512" fill="currentColor"><path d="M48.5 224H40c-13.3 0-24-10.7-24-24V72c0-9.7 5.8-18.5 14.8-22.2s19.3-1.7 26.2 5.2L98.6 96.6c87.6-86.5 228.7-86.2 315.8 1c87.5 87.5 87.5 229.3 0 316.8s-229.3 87.5-316.8 0c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0c62.5 62.5 163.8 62.5 226.3 0s62.5-163.8 0-226.3c-62.2-62.2-162.7-62.5-225.3-1L185 183c6.9 6.9 8.9 17.2 5.2 26.2s-12.5 14.8-22.2 14.8H48.5z"/></svg>
                  </button>
                  <button class="play-pause-btn" id="play-pause-btn" disabled title="Play/Pause (Space)">
                    <svg class="play-icon" viewBox="0 0 384 512" fill="currentColor" id="play-icon"><path d="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80V432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z"/></svg>
                    <svg class="pause-icon" viewBox="0 0 320 512" fill="currentColor" id="pause-icon" style="display:none"><path d="M48 64C21.5 64 0 85.5 0 112V400c0 26.5 21.5 48 48 48H80c26.5 0 48-21.5 48-48V112c0-26.5-21.5-48-48-48H48zm192 0c-26.5 0-48 21.5-48 48V400c0 26.5 21.5 48 48 48h32c26.5 0 48-21.5 48-48V112c0-26.5-21.5-48-48-48H240z"/></svg>
                    <div class="loading-spinner" id="loading-spinner" style="display:none"></div>
                  </button>
                  <button class="scrub-btn scrub-forward" id="scrub-forward-btn" disabled title="Forward 10 seconds (Shift+→)">
                    <svg viewBox="0 0 512 512" fill="currentColor"><path d="M463.5 224H472c13.3 0 24-10.7 24-24V72c0-9.7-5.8-18.5-14.8-22.2s-19.3-1.7-26.2 5.2L413.4 96.6c-87.6-86.5-228.7-86.2-315.8 1c-87.5 87.5-87.5 229.3 0 316.8s229.3 87.5 316.8 0c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0c-62.5 62.5-163.8 62.5-226.3 0s-62.5-163.8 0-226.3c62.2-62.2 162.7-62.5 225.3-1L327 183c-6.9 6.9-8.9 17.2-5.2 26.2s12.5 14.8 22.2 14.8h119.5z"/></svg>
                  </button>
                  <button class="skip-btn" id="next-btn" title="Next track (→)">
                    <svg viewBox="0 0 512 512" fill="currentColor"><path d="M52.5 440.6c-9.5 7.9-22.8 9.7-34.1 4.4S0 428.4 0 416V96C0 83.6 7.2 72.3 18.4 67s24.5-3.6 34.1 4.4L224 214.3V96c0-12.4 7.2-23.7 18.4-29s24.5-3.6 34.1 4.4l192 160c7.3 6.1 11.5 15.1 11.5 24.6s-4.2 18.5-11.5 24.6l-192 160c-9.5 7.9-22.8 9.7-34.1 4.4s-18.4-16.6-18.4-29V297.7L52.5 440.6z"/></svg>
                  </button>
                </div>` : '';

        const noAudioMessage = hasAudio ? '' : `
                  <div class="no-audio-message">No audio available</div>`;

        const bottomRow = hasAudio ? `
              <div class="player-bottom-row">
                <span class="time-display" id="elapsed-time">0:00</span>
                <div class="scrubber-container" id="scrubber">
                  <div class="progress-overlay" id="progress-overlay"></div>
                </div>
                <span class="time-display remaining" id="remaining-time">-0:00</span>
              </div>` : '';

        return `
          <div class="audio-player" id="audio-player">
            <div class="blur-wrapper">
              <div class="background-blur" id="bg-blur"></div>
            </div>
            <div class="player-content">
              <div class="player-cover-art-container">
                <img src="${escapeHtml(coverArtUrl)}" alt="" class="player-cover-art" id="cover-img" fetchpriority="high" loading="eager" onerror="this.style.display='none'" />
                <div class="cover-loading-overlay" id="cover-loading-overlay"><div class="cover-loading-spinner"></div></div>${coverPlayButton}
              </div>
              <div class="player-main">
                <div class="player-top-row">
                  <div class="player-track-info">
                    <div class="player-track-title"><a href="${escapeHtml(track.url)}" target="_blank" rel="noopener">${escapeHtml(track.title)}</a></div>
                    <div class="player-track-subtitle">${subtitleHtml}</div>${noAudioMessage}
                  </div>${playerControls}
                </div>${bottomRow}
              </div>
            </div>
          </div>
        `;
      }

      function isDataComplete(data) {
        if (!data) return false;
        if (data.title && data.date) return true;
        if (data.show?.tracks?.length > 0) return true;
        return false;
      }

      function extractTrackData(data) {
        if (data.title) return data;
        
        if (data.show?.tracks?.length > 0) {
          if (data.base_url) baseUrl = data.base_url;
          showData = data.show;
          currentTrackIndex = data.current_track_index || 0;
          
          const track = data.show.tracks[currentTrackIndex];
          if (!track) return null;
          
          return {
            title: track.title,
            slug: track.slug,
            url: track.url,
            date: data.show.date,
            show_url: data.show.show_url,
            mp3_url: track.mp3_url,
            duration_ms: track.duration_ms,
            waveform_image_url: track.waveform_image_url,
            venue: data.show.venue,
            venue_slug: data.show.venue_slug,
            location: data.show.location,
            cover_art_url: data.show.cover_art_url,
            tags: track.tags || [],
            set: track.set,
            position: track.position
          };
        }
        
        return null;
      }

      async function render() {
        const root = document.getElementById('root');
        const rawData = await waitForData(isDataComplete);
        const data = extractTrackData(rawData);
        if (!data) return;

        root.innerHTML = renderPlayer(data);
        setupBackgroundBlur(data.cover_art_url);
        initTagTooltips();
        initSetPositionTooltips();
        if (data.mp3_url) {
          const gaplessIndex = findGaplessIndex(currentTrackIndex);
          initGaplessPlayer(data, gaplessIndex, false);
        }
      }

      window.addEventListener('message', async (event) => {
        if (event.data?.type === 'tool_output' || event.data?.structuredContent || event.data?.title || event.data?.show) {
          const newData = event.data.structuredContent || event.data;
          const newCoverArtUrl = newData?.show?.cover_art_url || newData?.cover_art_url;
          const currentCoverImg = document.getElementById('cover-img');
          const currentCoverArtUrl = currentCoverImg?.src;
          
          const isShowChange = newCoverArtUrl && currentCoverArtUrl && newCoverArtUrl !== currentCoverArtUrl;
          
          if (isShowChange) {
            isNavigating = true;
            showCoverLoadingOverlay(true);
            await preloadImage(newCoverArtUrl);
            
            if (gaplessPlayer) {
              gaplessPlayer.stop();
              gaplessPlayer = null;
            }
            isPlaying = false;
            isAudioLoading = false;
          }
          
          window._widgetData = newData;
          await render();
          
          if (isShowChange) {
            isNavigating = false;
            showCoverLoadingOverlay(false);
          }
        }
      });

      function initKeyboardShortcuts() {
        document.addEventListener('keydown', (e) => {
          if (['INPUT', 'TEXTAREA'].includes(document.activeElement?.tagName) || document.activeElement?.isContentEditable) return;
          if (!gaplessPlayer) return;

          if (e.key === ' ' && !e.shiftKey) {
            e.preventDefault();
            togglePlayPause();
            fadeOutCoverPlayButton();
          } else if (e.key === 'ArrowLeft' && !e.shiftKey) {
            e.preventDefault();
            playPrev();
          } else if (e.key === 'ArrowRight' && !e.shiftKey) {
            e.preventDefault();
            playNext();
          } else if (e.key === 'ArrowLeft' && e.shiftKey) {
            e.preventDefault();
            scrub(-10);
          } else if (e.key === 'ArrowRight' && e.shiftKey) {
            e.preventDefault();
            scrub(10);
          }
        });
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          render();
          initKeyboardShortcuts();
        });
      } else {
        render();
        initKeyboardShortcuts();
      }
    })();
  </script>
