<% @title = "Phish.in Show" -%>
<%= partial("head") %>
  <style>
<%= partial("base_styles") %>
<%= partial("card_styles") %>
<%= partial("track_styles") %>
<%= partial("audio_player_styles") %>

    .context-menu-wrapper {
      position: relative;
      display: inline-block;
      margin-left: 8px;
      vertical-align: top;
    }

    .context-menu-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: #515152;
      background: rgba(0, 0, 0, 0.1);
      border: none;
      border-radius: 4px;
      transition: background 0.15s;
      cursor: pointer;
      padding: 2px 6px;
      font-size: 0.9rem;
      font-weight: 700;
      letter-spacing: 1px;
      line-height: 1;
      position: relative;
      top: -0.35rem;
    }

    .context-menu-btn:hover {
      background: rgba(0, 0, 0, 0.2);
    }

    .context-dropdown {
      position: absolute;
      top: 100%;
      right: 0;
      margin-top: 4px;
      background-color: #ffffff;
      border-radius: 0.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      min-width: 200px;
      z-index: 9999;
      display: none;
      overflow: hidden;
      isolation: isolate;
      font-weight: 300;
    }

    .context-dropdown.visible {
      display: block;
    }

    .context-dropdown-item {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 8px 12px;
      color: #515152;
      text-decoration: none;
      font-size: 1rem;
      font-weight: 300;
      line-height: 1.2;
      transition: background-color 0.15s;
      cursor: pointer;
      border: none;
      background-color: #ffffff;
      width: 100%;
      text-align: left;
    }

    .context-dropdown-item:hover {
      background-color: #f5f5f5;
    }

    .context-dropdown-item.no-hover {
      cursor: default;
    }

    .context-dropdown-item.no-hover:hover {
      background-color: #ffffff;
    }

    .context-dropdown-item svg {
      width: 14px;
      height: 14px;
      flex-shrink: 0;
    }

    .taper-notes-modal {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(212, 213, 215, 0.98);
      z-index: 100;
      display: flex;
      flex-direction: column;
      padding: 16px;
      overflow-y: auto;
      border-radius: 0.5rem;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0s 0.3s;
    }

    .taper-notes-modal.visible {
      opacity: 1;
      visibility: visible;
      transition: opacity 0.3s ease, visibility 0s 0s;
    }

    .taper-notes-modal.with-player {
      bottom: 96px;
      border-radius: 0.5rem 0.5rem 0 0;
    }

    .taper-notes-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
    }

    .taper-notes-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #515152;
    }

    .taper-notes-header .modal-close-btn {
      position: static;
    }

    .taper-notes-content {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 0.5rem;
      padding: 16px;
      font-size: 1.1rem;
      color: #515152;
      line-height: 1.5;
      white-space: pre-wrap;
      flex: 1;
      overflow-y: auto;
    }

    .cover-art-container {
      position: relative;
      width: 88px;
      height: 88px;
      flex-shrink: 0;
    }

    .cover-art {
      width: 88px;
      height: 88px;
      border-radius: 0.5rem;
      object-fit: cover;
      box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }

    .play-button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      border: none;
      cursor: pointer;
      transition: background 0.3s, opacity 0.5s, transform 0.2s;
      opacity: 1;
    }

    .play-button:hover {
      background: rgba(3, 187, 242, 0.7);
      transform: translate(-50%, -50%) scale(1.1);
    }

    .play-button.fade-out {
      opacity: 0;
      pointer-events: none;
    }

    .play-button svg {
      width: 24px;
      height: 24px;
      fill: rgba(255, 255, 255, 0.95);
      margin-left: 3px;
    }
    
    .show-info {
      display: flex;
      flex-direction: column;
      justify-content: center;
      min-width: 0;
      flex: 1;
    }
    
    .show-date {
      font-size: 2rem;
      font-weight: 700;
      line-height: 2rem;
      margin-bottom: 4px;
      color: #3a3a3a;
    }
    
    .venue-name {
      font-size: 1.2rem;
      font-weight: 700;
      color: #3a3a3a;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      line-height: 1.4rem;
    }
    
    .location {
      font-size: 1.1rem;
      color: #515152;
      margin-top: 2px;
    }

    .track-menu-wrapper {
      position: relative;
      flex-shrink: 0;
      margin-left: 8px;
    }

    .track-menu-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      background: none;
      border: none;
      color: #6d6f71;
      cursor: pointer;
      padding: 4px;
      font-size: 1rem;
      font-weight: 700;
      letter-spacing: 1px;
      transition: color 0.15s;
    }

    .track-menu-btn:hover {
      color: #03BBF2;
    }

    .track-dropdown {
      position: absolute;
      top: 100%;
      right: 0;
      margin-top: 2px;
      background-color: #ffffff;
      border-radius: 0.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      min-width: 160px;
      z-index: 9999;
      display: none;
      overflow: hidden;
    }

    .track-dropdown.visible {
      display: block;
    }

    .track-dropdown-item {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 8px 12px;
      color: #515152;
      text-decoration: none;
      font-size: 1rem;
      transition: background-color 0.15s, color 0.15s;
      cursor: pointer;
      border: none;
      background-color: #ffffff;
      width: 100%;
      text-align: left;
    }

    .track-dropdown-item:hover {
      background-color: #f5f5f5;
    }

    .track-dropdown-item svg {
      width: 14px;
      height: 14px;
      flex-shrink: 0;
    }

    .track-dropdown-item.disabled {
      opacity: 0.4;
      cursor: default;
      pointer-events: none;
    }

    .cover-art-container.clickable {
      cursor: pointer;
    }

    .cover-art-container.clickable:hover .cover-art {
      box-shadow: 0 4px 16px rgba(3, 187, 242, 0.4);
    }

    .cover-art-modal {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 96px;
      background: rgba(212, 213, 215, 0.98);
      z-index: 100;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      padding: 16px;
      overflow-y: auto;
      border-radius: 0.5rem 0.5rem 0 0;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0s 0.3s;
    }

    .cover-art-modal.visible {
      opacity: 1;
      visibility: visible;
      transition: opacity 0.3s ease, visibility 0s 0s;
    }

    .modal-close-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      width: 32px;
      height: 32px;
      border: none;
      background: rgba(0, 0, 0, 0.3);
      border-radius: 50%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      transition: background 0.15s;
      z-index: 101;
    }

    .modal-close-btn:hover {
      background: rgba(0, 0, 0, 0.5);
    }

    .modal-close-btn svg {
      width: 16px;
      height: 16px;
    }

    .modal-images {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 12px;
      width: 100%;
    }

    .modal-image-container {
      width: 100%;
      max-width: 400px;
    }

    .modal-image {
      width: 100%;
      border-radius: 0.5rem;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.25);
    }

    .modal-info-box {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 0.5rem;
      padding: 12px 16px;
      margin-top: 12px;
      font-size: 1rem;
      color: #515152;
      text-align: center;
      max-width: 400px;
      line-height: 1.4;
    }

    .tags-row {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      padding: 8px 12px;
      background-color: #ffffff;
      align-items: center;
      font-weight: 300;
      line-height: 1.2;
    }

    .tags-row-icon {
      width: 14px;
      height: 14px;
      flex-shrink: 0;
      color: #515152;
    }

    .tags-row.clickable {
      cursor: pointer;
      transition: background-color 0.15s;
    }

    .tags-row.clickable:hover {
      background-color: #f5f5f5;
    }

    .tag-badge {
      display: inline-block;
      padding: 0.1rem 0.35rem;
      background-color: #6d6f71;
      color: white;
      border-radius: 0.2rem;
      font-size: 0.7rem;
      font-weight: 300;
      white-space: nowrap;
      pointer-events: none;
    }

    .track-inline-tags {
      display: none;
      flex-wrap: nowrap;
      justify-content: flex-start;
      gap: 0.2rem;
      overflow: hidden;
      width: 180px;
      flex-shrink: 0;
    }

    .track-inline-tags .tag-badge {
      font-size: 0.6rem;
      font-weight: 300;
      cursor: pointer;
      pointer-events: auto;
      transition: background-color 0.2s;
    }

    .track-inline-tags .tag-badge:hover {
      background-color: #f5f5f5;
      color: #6d6f71;
    }

    @media (min-width: 500px) {
      .track-inline-tags {
        display: flex;
      }
    }

    .tag-modal {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(212, 213, 215, 0.98);
      z-index: 100;
      display: flex;
      flex-direction: column;
      padding: 16px;
      overflow-y: auto;
      border-radius: 0.5rem;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0s 0.3s;
    }

    .tag-modal.visible {
      opacity: 1;
      visibility: visible;
      transition: opacity 0.3s ease, visibility 0s 0s;
    }

    .tag-modal.with-player {
      bottom: 96px;
      border-radius: 0.5rem 0.5rem 0 0;
    }

    .tag-modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
    }

    .tag-modal-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #515152;
    }

    .tag-modal-header .modal-close-btn {
      position: static;
    }

    .tag-modal-content {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 0.5rem;
      padding: 16px;
      font-size: 1.1rem;
      color: #515152;
      line-height: 1.5;
      flex: 1;
      overflow-y: auto;
    }

    .tag-modal-section {
      margin-bottom: 12px;
    }

    .tag-modal-section:last-child {
      margin-bottom: 0;
    }

    .tag-modal-section-title {
      display: inline-block;
      padding: 0.2rem 0.6rem;
      background-color: #6d6f71;
      color: white;
      border-radius: 0.25rem;
      font-size: 1.1rem;
      font-weight: 700;
      margin-bottom: 8px;
    }
  </style>
</head>
<body>
<%= partial("loader") %>

  <script>
    (function() {
<%= partial("base_scripts") %>
<%= partial("audio_player_scripts") %>

      function renderShow(show) {
        const tracksBySet = {};
        allTracks = [];
        let trackIndex = 0;
        
        (show.tracks || []).forEach(track => {
          const setName = track.set || 'Set';
          if (!tracksBySet[setName]) tracksBySet[setName] = [];
          tracksBySet[setName].push({ ...track, globalIndex: trackIndex });
          allTracks.push(track);
          trackIndex++;
        });

        const hasAudio = hasAnyAudio(allTracks);

        let tracksHtml = '';
        Object.entries(tracksBySet).forEach(([setName, tracks]) => {
          const setDurationMs = tracks.reduce((sum, t) => sum + parseDuration(t.duration), 0);
          const setDuration = formatDuration(setDurationMs);
          
          tracksHtml += `
            <div class="set-group">
              <div class="section-title">
                <div class="title-left">${escapeHtml(setName)}</div>
                <span class="detail-right">${setDuration}</span>
              </div>
          `;
          tracks.forEach((track) => {
            const hasTrackAudio = !!track.mp3_url;
            const song = track.song;
            const gap = track.gap;
            const hasPrev = gap && gap.previous_slug;
            const hasNext = gap && gap.next_slug;
            const trackTags = track.tags || [];
            
            let trackMenuHtml = '';
            if (song || hasPrev || hasNext || trackTags.length > 0) {
              trackMenuHtml = `
                <div class="track-menu-wrapper">
                  <button class="track-menu-btn" data-track-index="${track.globalIndex}" title="Track options">•••</button>
                  <div class="track-dropdown" id="track-dropdown-${track.globalIndex}">
                    ${trackTags.length > 0 ? `
                      <div class="tags-row clickable" data-tags='${JSON.stringify(trackTags).replace(/'/g, "&#39;")}'>
                        <svg class="tags-row-icon" viewBox="0 0 448 512" fill="currentColor">
                          <path d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"/>
                        </svg>
                        ${trackTags.map(tag => `<span class="tag-badge">${escapeHtml(tag.name)}</span>`).join('')}
                      </div>
                    ` : ''}
                    ${song ? `
                      <a href="https://phish.in/songs/${escapeHtml(song.slug)}" target="_blank" rel="noopener" class="track-dropdown-item">
                        <svg viewBox="0 0 512 512" fill="currentColor">
                          <path d="M499.1 6.3c8.1 6 12.9 15.6 12.9 25.7v72V368c0 44.2-43 80-96 80s-96-35.8-96-80s43-80 96-80c11.2 0 22 1.6 32 4.6V147L192 223.8V432c0 44.2-43 80-96 80s-96-35.8-96-80s43-80 96-80c11.2 0 22 1.6 32 4.6V200 128c0-14.1 9.3-26.6 22.8-30.7l320-96c9.7-2.9 20.2-1.1 28.3 5z"/>
                        </svg>
                        <span>${escapeHtml(song.title)}</span>
                      </a>
                    ` : ''}
                    ${hasPrev ? `
                      <a href="https://phish.in/${escapeHtml(gap.previous_slug)}" target="_blank" rel="noopener" class="track-dropdown-item">
                        <svg viewBox="0 0 512 512" fill="currentColor">
                          <path d="M512 256A256 256 0 1 0 0 256a256 256 0 1 0 512 0zM271 135c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-87 87 87 87c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0L167 273c-9.4-9.4-9.4-24.6 0-33.9L271 135z"/>
                        </svg>
                        <span>Previous (${gap.previous} show${gap.previous === 1 ? '' : 's'})</span>
                      </a>
                    ` : ''}
                    ${hasNext ? `
                      <a href="https://phish.in/${escapeHtml(gap.next_slug)}" target="_blank" rel="noopener" class="track-dropdown-item">
                        <svg viewBox="0 0 512 512" fill="currentColor">
                          <path d="M0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zM241 377c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l87-87-87-87c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0L345 239c9.4 9.4 9.4 24.6 0 33.9L241 377z"/>
                        </svg>
                        <span>Next (${gap.next} show${gap.next === 1 ? '' : 's'})</span>
                      </a>
                    ` : ''}
                  </div>
                </div>
              `;
            }
            
            const inlineTagsHtml = `
              <div class="track-inline-tags"${trackTags.length > 0 ? ` data-tags='${JSON.stringify(trackTags).replace(/'/g, "&#39;")}'` : ''}>
                ${trackTags.map(tag => `<span class="tag-badge">${escapeHtml(tag.name)}</span>`).join('')}
              </div>
            `;
            
            tracksHtml += `
              <div class="track ${hasTrackAudio ? '' : 'no-audio'}" data-index="${track.globalIndex}" ${hasTrackAudio ? '' : 'title="No audio available"'}>
                <div class="track-left">
                  <span class="track-title">${escapeHtml(track.title)}</span>
                </div>
                <div class="track-right">
                  ${inlineTagsHtml}
                  ${hasTrackAudio ? `
                    <span class="track-duration">${track.duration || ''}</span>
                  ` : `
                    <span class="track-no-audio-icon" title="No audio available">
                      <svg viewBox="0 0 576 512" fill="currentColor">
                        <path d="M301.1 34.8C312.6 40 320 51.4 320 64V448c0 12.6-7.4 24-18.9 29.2s-25 3.6-34.4-5.4L131.8 352H64c-35.3 0-64-28.7-64-64V224c0-35.3 28.7-64 64-64h67.8L266.7 40.1c9.4-9 22.9-10.8 34.4-5.4zM425 167l55 55 55-55c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-55 55 55 55c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0l-55-55-55 55c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l55-55-55-55c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0z"/>
                      </svg>
                    </span>
                  `}
                  ${trackMenuHtml}
                </div>
              </div>
            `;
          });
          tracksHtml += '</div>';
        });

        const coverArtUrl = show.cover_art_url || '';
        const coverArtUrlLarge = show.cover_art_url_large || '';
        const albumCoverUrl = show.album_cover_url || '';

        let playerHtml = '';
        let modalHtml = '';
        let taperNotesModalHtml = '';

        if (show.taper_notes) {
          taperNotesModalHtml = `
            <div class="taper-notes-modal" id="taper-notes-modal">
              <div class="taper-notes-header">
                <span class="taper-notes-title">Taper Notes</span>
                <button class="modal-close-btn" id="taper-notes-close-btn" title="Close">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                  </svg>
                </button>
              </div>
              <div class="taper-notes-content">${escapeHtml(show.taper_notes)}</div>
            </div>
          `;
        }

        const tagModalHtml = `
          <div class="tag-modal" id="tag-modal">
            <div class="tag-modal-header">
              <span class="tag-modal-title" id="tag-modal-title"></span>
              <button class="modal-close-btn" id="tag-modal-close-btn" title="Close">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
            </div>
            <div class="tag-modal-content" id="tag-modal-content"></div>
          </div>
        `;

        if (hasAudio) {
          modalHtml = `
            <div class="cover-art-modal" id="cover-art-modal">
              <button class="modal-close-btn" id="modal-close-btn" title="Close">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
              <div class="modal-images">
                ${coverArtUrlLarge ? `<div class="modal-image-container"><img src="${escapeHtml(coverArtUrlLarge)}" alt="Cover art" class="modal-image" /></div>` : ''}
                ${albumCoverUrl ? `<div class="modal-image-container"><img src="${escapeHtml(albumCoverUrl)}" alt="Album cover" class="modal-image" /></div>` : ''}
              </div>
              <div class="modal-info-box">
                Images generated by DALL-E
              </div>
            </div>
          `;
          playerHtml = `<%= partial("audio_player_html").gsub("\n", "\n            ") %>`;
        }

        const showUrl = show.show_url || '';

        return `
          <div class="card ${hasAudio ? 'has-player' : ''}">
            <div class="blur-wrapper">
              <div class="background-blur" id="bg-blur"></div>
            </div>
            <%= partial("expand_icons").gsub("\n", "\n            ") %>
            <div class="card-content">
              <div class="card-header">
                <div class="cover-art-container">
                  <img src="${escapeHtml(coverArtUrl)}" alt="Cover" class="cover-art" id="cover-img" />
                  ${hasAudio ? `<button class="play-button" id="header-play-btn" title="Play show">
                    <svg viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                  </button>` : ''}
                </div>
                <div class="show-info">
                  <div class="show-date">
                    ${formatDate(show.date)}
                    <div class="context-menu-wrapper">
                      <button class="context-menu-btn" id="context-menu-btn" title="Show options">•••</button>
                      <div class="context-dropdown" id="context-dropdown">
                        ${show.duration_ms ? `
                          <span class="context-dropdown-item no-hover">
                            <svg viewBox="0 0 512 512" fill="currentColor">
                              <path d="M256 0a256 256 0 1 1 0 512A256 256 0 1 1 256 0zM232 120V256c0 8 4 15.5 10.7 20l96 64c11 7.4 25.9 4.4 33.3-6.7s4.4-25.9-6.7-33.3L280 243.2V120c0-13.3-10.7-24-24-24s-24 10.7-24 24z"/>
                            </svg>
                            <span>${formatDuration(show.duration_ms)}</span>
                          </span>
                        ` : ''}
                        ${show.tags && show.tags.length > 0 ? `
                          <div class="tags-row clickable" data-tags='${JSON.stringify(show.tags).replace(/'/g, "&#39;")}'>
                            <svg class="tags-row-icon" viewBox="0 0 448 512" fill="currentColor">
                              <path d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"/>
                            </svg>
                            ${show.tags.map(tag => `<span class="tag-badge">${escapeHtml(tag.name)}</span>`).join('')}
                          </div>
                        ` : ''}
                        ${show.venue_slug ? `
                          <a href="https://phish.in/venues/${escapeHtml(show.venue_slug)}" target="_blank" rel="noopener" class="context-dropdown-item">
                            <svg viewBox="0 0 384 512" fill="currentColor">
                              <path d="M48 0C21.5 0 0 21.5 0 48V464c0 26.5 21.5 48 48 48h96V432c0-26.5 21.5-48 48-48s48 21.5 48 48v80h96c26.5 0 48-21.5 48-48V48c0-26.5-21.5-48-48-48H48zM64 240c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V240zm112-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H176c-8.8 0-16-7.2-16-16V240c0-8.8 7.2-16 16-16zm80 16c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V240zM80 96h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16zm80 16c0-8.8 7.2-16 16-16h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H176c-8.8 0-16-7.2-16-16V112zM272 96h32c8.8 0 16 7.2 16 16v32c0 8.8-7.2 16-16 16H272c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16z"/>
                            </svg>
                            <span>${escapeHtml(show.venue)}</span>
                          </a>
                        ` : ''}
                        ${show.location ? `
                          <a href="https://phish.in/map?term=${encodeURIComponent(show.location)}" target="_blank" rel="noopener" class="context-dropdown-item">
                            <svg viewBox="0 0 384 512" fill="currentColor">
                              <path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/>
                            </svg>
                            <span>${escapeHtml(show.location)}</span>
                          </a>
                        ` : ''}
                        ${show.taper_notes ? `
                          <button class="context-dropdown-item" id="taper-notes-btn">
                            <svg viewBox="0 0 384 512" fill="currentColor">
                              <path d="M192 0c-41.8 0-77.4 26.7-90.5 64H64C28.7 64 0 92.7 0 128V448c0 35.3 28.7 64 64 64H320c35.3 0 64-28.7 64-64V128c0-35.3-28.7-64-64-64H282.5C269.4 26.7 233.8 0 192 0zm0 64a32 32 0 1 1 0 64 32 32 0 1 1 0-64zM112 192H272c8.8 0 16 7.2 16 16s-7.2 16-16 16H112c-8.8 0-16-7.2-16-16s7.2-16 16-16z"/>
                            </svg>
                            <span>Taper Notes</span>
                          </button>
                        ` : ''}
                        <a href="${escapeHtml(showUrl)}" target="_blank" rel="noopener" class="context-dropdown-item">
                          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                            <polyline points="15 3 21 3 21 9"/>
                            <line x1="10" y1="14" x2="21" y2="3"/>
                          </svg>
                          <span>Phish.in website</span>
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="venue-name">${escapeHtml(show.venue)}</div>
                  <div class="location">${escapeHtml(show.location || '')}</div>
                </div>
              </div>
              ${tracksHtml ? `<div class="track-list">${tracksHtml}</div>` : ''}
            </div>
            ${taperNotesModalHtml}
            ${tagModalHtml}
            ${modalHtml}
            ${playerHtml}
          </div>
        `;
      }

      function initCoverArtModal() {
        const coverArtContainer = document.querySelector('.cover-art-container');
        const modal = document.getElementById('cover-art-modal');
        const closeBtn = document.getElementById('modal-close-btn');

        if (!coverArtContainer || !modal) return;

        coverArtContainer.addEventListener('click', (e) => {
          if (!coverArtContainer.classList.contains('clickable')) return;
          const playBtn = document.getElementById('header-play-btn');
          if (playBtn && !playBtn.classList.contains('fade-out')) return;
          e.stopPropagation();
          modal.classList.add('visible');
        });

        closeBtn?.addEventListener('click', (e) => {
          e.stopPropagation();
          modal.classList.remove('visible');
        });

        modal.addEventListener('click', (e) => {
          if (e.target === modal) {
            modal.classList.remove('visible');
          }
        });
      }

      function initContextMenu() {
        const btn = document.getElementById('context-menu-btn');
        const dropdown = document.getElementById('context-dropdown');
        if (!btn || !dropdown) return;

        btn.addEventListener('click', (e) => {
          e.stopPropagation();
          dropdown.classList.toggle('visible');
        });

        dropdown.addEventListener('click', (e) => {
          e.stopPropagation();
        });

        document.addEventListener('click', (e) => {
          if (!dropdown.contains(e.target) && e.target !== btn) {
            dropdown.classList.remove('visible');
          }
        });

        dropdown.querySelectorAll('a').forEach(link => {
          link.addEventListener('click', (e) => {
            e.stopPropagation();
            dropdown.classList.remove('visible');
          });
        });
      }

      function initTrackMenus() {
        const trackMenuBtns = document.querySelectorAll('.track-menu-btn');
        let openDropdown = null;

        trackMenuBtns.forEach(btn => {
          btn.addEventListener('click', (e) => {
            e.stopPropagation();
            const trackIndex = btn.dataset.trackIndex;
            const dropdown = document.getElementById(`track-dropdown-${trackIndex}`);
            
            if (openDropdown && openDropdown !== dropdown) {
              openDropdown.classList.remove('visible');
            }
            
            dropdown.classList.toggle('visible');
            openDropdown = dropdown.classList.contains('visible') ? dropdown : null;
          });
        });

        document.addEventListener('click', (e) => {
          if (openDropdown && !e.target.closest('.track-menu-wrapper')) {
            openDropdown.classList.remove('visible');
            openDropdown = null;
          }
        });

        document.querySelectorAll('.track-dropdown a').forEach(link => {
          link.addEventListener('click', (e) => {
            e.stopPropagation();
            if (openDropdown) {
              openDropdown.classList.remove('visible');
              openDropdown = null;
            }
          });
        });
      }

      function initTaperNotesModal() {
        const taperNotesBtn = document.getElementById('taper-notes-btn');
        const taperNotesModal = document.getElementById('taper-notes-modal');
        const taperNotesCloseBtn = document.getElementById('taper-notes-close-btn');
        if (!taperNotesBtn || !taperNotesModal) return;

        taperNotesBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          const dropdown = document.getElementById('context-dropdown');
          if (dropdown) dropdown.classList.remove('visible');
          
          const player = document.getElementById('audio-player');
          if (player && player.classList.contains('visible')) {
            taperNotesModal.classList.add('with-player');
          } else {
            taperNotesModal.classList.remove('with-player');
          }
          
          taperNotesModal.classList.add('visible');
        });

        taperNotesCloseBtn?.addEventListener('click', (e) => {
          e.stopPropagation();
          taperNotesModal.classList.remove('visible');
        });

        taperNotesModal.addEventListener('click', (e) => {
          if (e.target === taperNotesModal) {
            taperNotesModal.classList.remove('visible');
          }
        });
      }

      function initTagModal() {
        const tagModal = document.getElementById('tag-modal');
        const tagModalTitle = document.getElementById('tag-modal-title');
        const tagModalContent = document.getElementById('tag-modal-content');
        const tagModalCloseBtn = document.getElementById('tag-modal-close-btn');
        if (!tagModal) return;

        function openTagModal(tags) {
          tagModalTitle.textContent = tags.length === 1 ? 'Tag' : 'Tags';
          
          let contentHtml = '';
          tags.forEach((tag, index) => {
            const hasDescription = tag.description && tag.description.trim();
            const hasNotes = tag.notes && tag.notes.trim();
            
            contentHtml += `<div class="tag-modal-section">`;
            contentHtml += `<div class="tag-modal-section-title">${escapeHtml(tag.name)}</div>`;
            
            if (hasDescription) {
              contentHtml += `<div style="margin-bottom: ${hasNotes ? '8px' : '0'}">${escapeHtml(tag.description)}</div>`;
            }
            if (hasNotes) {
              contentHtml += `<div style="font-style: italic; color: #6d6f71;">${escapeHtml(tag.notes)}</div>`;
            }
            if (!hasDescription && !hasNotes) {
              contentHtml += `<div style="color: #9a9b9d;">No additional details available.</div>`;
            }
            
            contentHtml += `</div>`;
          });
          
          tagModalContent.innerHTML = contentHtml;
          
          document.querySelectorAll('.context-dropdown, .track-dropdown').forEach(d => d.classList.remove('visible'));
          
          const player = document.getElementById('audio-player');
          if (player && player.classList.contains('visible')) {
            tagModal.classList.add('with-player');
          } else {
            tagModal.classList.remove('with-player');
          }
          
          tagModal.classList.add('visible');
        }

        document.querySelectorAll('.tags-row.clickable, .track-inline-tags').forEach(row => {
          row.addEventListener('click', (e) => {
            e.stopPropagation();
            
            let tags = [];
            try {
              tags = JSON.parse(row.dataset.tags || '[]');
            } catch (err) {
              console.error('Failed to parse tags:', err);
              return;
            }
            
            openTagModal(tags);
          });
        });

        tagModalCloseBtn?.addEventListener('click', (e) => {
          e.stopPropagation();
          tagModal.classList.remove('visible');
        });

        tagModal.addEventListener('click', (e) => {
          if (e.target === tagModal) {
            tagModal.classList.remove('visible');
          }
        });
      }

      function isDataComplete(data) {
        if (!data) return false;
        if (data.error) return true;
        return data.date && Array.isArray(data.tracks) && data.tracks.length > 0;
      }

      async function render() {
        const root = document.getElementById('root');
        
        try {
          const data = await waitForData(isDataComplete);

          if (!data) {
            root.innerHTML = renderNotFound('No show data available', 'Show');
            return;
          }

          if (data.error) {
            root.innerHTML = renderNotFound(data.message || 'Show not found', 'Show');
            return;
          }

          if (data.date) {
            root.innerHTML = renderShow(data);
            setupBackgroundBlur(data.cover_art_url);
            initExpandButton();
            initAudioPlayer();
            initContextMenu();
            initTrackMenus();
            initTaperNotesModal();
            initTagModal();
            initCoverArtModal();
          } else {
            root.innerHTML = renderNotFound('Show not found', 'Show');
          }
        } catch (e) {
          root.innerHTML = renderNotFound(e.message, 'Show');
        }
      }

      window.addEventListener('message', (event) => {
        if (event.data?.type === 'tool_output' || event.data?.structuredContent || event.data?.date) {
          window._widgetData = event.data.structuredContent || event.data;
          render();
        }
      });

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', render);
      } else {
        render();
      }
    })();
  </script>
