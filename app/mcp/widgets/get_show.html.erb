<% @title = "#{app_name_placeholder} Show" -%>
<%= partial("head") %>
  <style>
<%= partial("base_styles") %>
<%= partial("loader_shimmer_styles") %>
<%= partial("card_styles") %>
<%= partial("track_styles") %>
<%= partial("audio_player_styles") %>
<%= partial("modal_common_styles") %>
<%= partial("tag_styles") %>
<%= partial("track_menu_styles") %>

    .taper-notes-modal {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 100;
      display: flex;
      flex-direction: column;
      padding: 16px;
      overflow-y: auto;
      border-radius: 0.5rem;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0s 0.3s;
    }

    .taper-notes-modal.visible {
      opacity: 1;
      visibility: visible;
      transition: opacity 0.3s ease, visibility 0s 0s;
    }

    .taper-notes-modal.with-player {
      bottom: 96px;
      border-radius: 0.5rem 0.5rem 0 0;
    }

    .taper-notes-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
      position: relative;
      z-index: 1;
    }

    .taper-notes-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #515152;
    }

    .taper-notes-header .modal-close-btn {
      position: static;
    }

    .taper-notes-content {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 0.5rem;
      position: relative;
      z-index: 1;
      padding: 16px;
      font-size: 1.1rem;
      color: #515152;
      line-height: 1.5;
      white-space: pre-wrap;
      flex: 1;
      overflow-y: auto;
    }

    .cover-art-container {
      position: relative;
      width: 76px;
      height: 76px;
      flex-shrink: 0;
    }

    .cover-art {
      width: 76px;
      height: 76px;
      border-radius: 4px;
      object-fit: cover;
      box-shadow: 0 2px 8px rgba(0,0,0,0.25);
    }

    .play-button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      border: none;
      cursor: pointer;
      transition: background 0.3s, opacity 0.5s, transform 0.2s;
      opacity: 1;
    }

    .play-button:hover {
      background: rgba(3, 187, 242, 0.7);
      transform: translate(-50%, -50%) scale(1.1);
    }

    .play-button.fade-out {
      opacity: 0;
      pointer-events: none;
    }

    .play-button svg {
      width: 24px;
      height: 24px;
      fill: rgba(255, 255, 255, 0.95);
      margin-left: 3px;
    }
    
    .show-info {
      display: flex;
      flex-direction: column;
      justify-content: center;
      min-width: 0;
      flex: 1;
    }
    
    .show-date {
      font-size: 1.5rem;
      font-weight: 700;
      color: #3a3a3a;
      white-space: nowrap;
      display: flex;
      align-items: center;
    }

    .show-date-link {
      color: inherit;
      text-decoration: none;
      transition: color 0.15s;
    }

    .show-date-link:hover {
      color: #03BBF2;
    }
    
    .venue-name {
      font-size: 0.95rem;
      font-weight: 400;
      color: #3a3a3a;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .venue-name-link,
    .location-link {
      color: inherit;
      text-decoration: none;
      transition: color 0.15s;
    }

    .venue-name-link:hover,
    .location-link:hover {
      color: #03BBF2;
    }


    .show-meta-row {
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 0.85rem;
      color: #3a3a3a;
      flex-wrap: wrap;
    }

    .show-meta-item {
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .show-meta-item svg {
      width: 12px;
      height: 12px;
      flex-shrink: 0;
    }

    .show-meta-item.clickable {
      cursor: pointer;
      transition: color 0.15s;
    }

    .show-meta-item.clickable:hover {
      color: #03BBF2;
    }

    .show-meta-tags {
      display: flex;
      align-items: center;
      gap: 4px;
      flex-wrap: wrap;
      cursor: pointer;
      position: relative;
      top: 1px;
    }

    .show-meta-tags .tag-badge {
      cursor: pointer;
      color: #6d6f71;
      transition: background-color 0.2s, color 0.2s;
    }

    .show-meta-tags .tag-badge:hover {
      background-color: rgba(3, 187, 242, 0.2);
      color: #03BBF2;
    }

    .cover-art-container.clickable {
      cursor: pointer;
    }

    .cover-art-container.clickable:hover .cover-art {
      box-shadow: 0 4px 16px rgba(3, 187, 242, 0.4);
    }

    .cover-art-modal {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 100;
      display: flex;
      flex-direction: column;
      border-radius: 0.5rem;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0s 0.3s;
      overflow: hidden;
    }

    .cover-art-modal.with-player {
      bottom: 96px;
      border-radius: 0.5rem 0.5rem 0 0;
    }

    .cover-art-modal.with-player .modal-blur-wrapper {
      border-radius: 0.5rem 0.5rem 0 0;
    }

    .cover-art-modal-content {
      position: relative;
      z-index: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 16px;
      overflow-y: auto;
      flex: 1;
      scrollbar-width: thin;
      scrollbar-color: rgba(109, 111, 113, 0.4) transparent;
    }

    .cover-art-modal-content::-webkit-scrollbar {
      width: 6px;
    }

    .cover-art-modal-content::-webkit-scrollbar-track {
      background: transparent;
    }

    .cover-art-modal-content::-webkit-scrollbar-thumb {
      background: rgba(109, 111, 113, 0.4);
      border-radius: 3px;
    }

    .cover-art-modal-content::-webkit-scrollbar-thumb:hover {
      background: rgba(109, 111, 113, 0.6);
    }

    .cover-art-modal.visible {
      opacity: 1;
      visibility: visible;
      transition: opacity 0.3s ease, visibility 0s 0s;
    }

    .modal-images {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 12px;
      width: 100%;
    }

    .modal-image-container {
      width: 100%;
      max-width: 400px;
    }

    .modal-image {
      width: 100%;
      border-radius: 0.5rem;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.25);
    }

    .modal-info-box {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 0.5rem;
      padding: 12px 16px;
      margin-top: 12px;
      font-size: 1rem;
      color: #515152;
      text-align: center;
      max-width: 400px;
      line-height: 1.4;
    }

  </style>
</head>
<body>
<div id="root">
  <div class="loader-container">
    <div class="loader-logo-wrapper">
      <img src="<%= asset_host_placeholder %>/mcp-widgets/images/<%= logo_full_placeholder %>" alt="<%= app_name_placeholder %>" class="loader-logo" />
    </div>
  </div>
</div>

  <script>
    (function() {
<%= partial("base_scripts") %>
<%= partial("audio_player_scripts") %>
<%= partial("init_track_menus") %>
<%= partial("init_tag_modal") %>

      function renderShow(show) {
        const tracksBySet = {};
        allTracks = [];
        let trackIndex = 0;
        
        (show.tracks || []).forEach(track => {
          const setName = track.set || 'Set';
          if (!tracksBySet[setName]) tracksBySet[setName] = [];
          tracksBySet[setName].push({ ...track, globalIndex: trackIndex });
          allTracks.push(track);
          trackIndex++;
        });

        const hasAudio = hasAnyAudio(allTracks);

        let tracksHtml = '';
        Object.entries(tracksBySet).forEach(([setName, tracks]) => {
          const setDurationMs = tracks.reduce((sum, t) => sum + parseDuration(t.duration), 0);
          const setDuration = formatDuration(setDurationMs);
          
          tracksHtml += `
            <div class="set-group">
              <div class="section-title">
                <div class="title-left">${escapeHtml(setName)}</div>
                <span class="detail-right">${setDuration}</span>
              </div>
          `;
          tracks.forEach((track) => {
            const hasTrackAudio = !!track.mp3_url;
            const song = track.song;
            const gap = track.gap;
            const hasPrev = gap && gap.previous_slug;
            const hasNext = gap && gap.next_slug;
            const trackTags = track.tags || [];
            
            let trackMenuHtml = '';
            const trackUrl = track.url || '';
            if (hasTrackAudio) {
              trackMenuHtml = `
                <div class="track-menu-wrapper">
                  <button class="track-menu-btn" data-track-index="${track.globalIndex}" title="Track options">•••</button>
                  <div class="track-dropdown" id="track-dropdown-${track.globalIndex}">
                    <button class="track-dropdown-item share-link-btn" data-url="${escapeHtml(trackUrl)}">
                      <svg viewBox="0 0 512 512" fill="currentColor">
                        <path d="M307 34.8c-11.5 5.1-19 16.6-19 29.2v64H176C78.8 128 0 206.8 0 304C0 417.3 81.5 467.9 100.2 478.1c2.5 1.4 5.3 1.9 8.1 1.9c10.9 0 19.7-8.9 19.7-19.7c0-7.5-4.3-14.4-9.8-19.5C108.8 431.9 96 414.4 96 384c0-53 43-96 96-96h96v64c0 12.6 7.4 24.1 19 29.2s25 3.2 34.4-5.4l160-144c6.7-6.1 10.6-14.7 10.6-23.8s-3.8-17.7-10.6-23.8l-160-144c-9.4-8.5-22.9-10.6-34.4-5.4z"/>
                      </svg>
                      <span>Share</span>
                    </button>
                    ${trackTags.length > 0 ? `
                      <div class="tags-row clickable" data-tags='${JSON.stringify(trackTags).replace(/'/g, "&#39;")}'>
                        <svg class="tags-row-icon" viewBox="0 0 448 512" fill="currentColor">
                          <path d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"/>
                        </svg>
                        ${renderGroupedTagBadges(trackTags)}
                      </div>
                    ` : ''}
                    ${song ? `
                      <a href="https://phish.in/songs/${escapeHtml(song.slug)}" target="_blank" rel="noopener" class="track-dropdown-item">
                        <svg viewBox="0 0 512 512" fill="currentColor">
                          <path d="M499.1 6.3c8.1 6 12.9 15.6 12.9 25.7v72V368c0 44.2-43 80-96 80s-96-35.8-96-80s43-80 96-80c11.2 0 22 1.6 32 4.6V147L192 223.8V432c0 44.2-43 80-96 80s-96-35.8-96-80s43-80 96-80c11.2 0 22 1.6 32 4.6V200 128c0-14.1 9.3-26.6 22.8-30.7l320-96c9.7-2.9 20.2-1.1 28.3 5z"/>
                        </svg>
                        <span>${escapeHtml(song.title)}</span>
                      </a>
                    ` : ''}
                    ${hasPrev ? `
                      <a href="https://phish.in/${escapeHtml(gap.previous_slug)}" target="_blank" rel="noopener" class="track-dropdown-item">
                        <svg viewBox="0 0 512 512" fill="currentColor">
                          <path d="M512 256A256 256 0 1 0 0 256a256 256 0 1 0 512 0zM271 135c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-87 87 87 87c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0L167 273c-9.4-9.4-9.4-24.6 0-33.9L271 135z"/>
                        </svg>
                        <span>Previous (${gap.previous} show${gap.previous === 1 ? '' : 's'})</span>
                      </a>
                    ` : ''}
                    ${hasNext ? `
                      <a href="https://phish.in/${escapeHtml(gap.next_slug)}" target="_blank" rel="noopener" class="track-dropdown-item">
                        <svg viewBox="0 0 512 512" fill="currentColor">
                          <path d="M0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zM241 377c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l87-87-87-87c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0L345 239c9.4 9.4 9.4 24.6 0 33.9L241 377z"/>
                        </svg>
                        <span>Next (${gap.next} show${gap.next === 1 ? '' : 's'})</span>
                      </a>
                    ` : ''}
                  </div>
                </div>
              `;
            }
            
            const inlineTagsHtml = `
              <div class="track-inline-tags"${trackTags.length > 0 ? ` data-tags='${JSON.stringify(trackTags).replace(/'/g, "&#39;")}'` : ''}>
                ${renderGroupedTagBadges(trackTags)}
              </div>
            `;
            
            tracksHtml += `
              <div class="track ${hasTrackAudio ? '' : 'no-audio'}" data-index="${track.globalIndex}" ${hasTrackAudio ? '' : 'title="No audio available"'}>
                <div class="track-left">
                  <span class="track-title">${escapeHtml(track.title)}</span>
                </div>
                <div class="track-right">
                  ${inlineTagsHtml}
                  ${hasTrackAudio ? `
                    <span class="track-duration">${track.duration || ''}</span>
                  ` : `
                    <span class="track-no-audio-icon" title="No audio available">
                      <svg viewBox="0 0 576 512" fill="currentColor">
                        <path d="M301.1 34.8C312.6 40 320 51.4 320 64V448c0 12.6-7.4 24-18.9 29.2s-25 3.6-34.4-5.4L131.8 352H64c-35.3 0-64-28.7-64-64V224c0-35.3 28.7-64 64-64h67.8L266.7 40.1c9.4-9 22.9-10.8 34.4-5.4zM425 167l55 55 55-55c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-55 55 55 55c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0l-55-55-55 55c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l55-55-55-55c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0z"/>
                      </svg>
                    </span>
                  `}
                  ${trackMenuHtml}
                </div>
              </div>
            `;
          });
          tracksHtml += '</div>';
        });

        const coverArtUrl = show.cover_art_url || '';
        const coverArtUrlLarge = show.cover_art_url_large || '';
        const albumCoverUrl = show.album_cover_url || '';

        let playerHtml = '';
        let modalHtml = '';
        let taperNotesModalHtml = '';

        if (show.taper_notes) {
          taperNotesModalHtml = `
            <div class="taper-notes-modal" id="taper-notes-modal">
              <div class="modal-blur-wrapper"><div class="modal-blur" id="taper-notes-blur"></div></div>
              <div class="taper-notes-header">
                <span class="taper-notes-title"><svg viewBox="0 0 384 512" fill="currentColor" style="width: 18px; height: 18px; margin-right: 8px; vertical-align: -2px;"><path d="M192 0c-41.8 0-77.4 26.7-90.5 64H64C28.7 64 0 92.7 0 128V448c0 35.3 28.7 64 64 64H320c35.3 0 64-28.7 64-64V128c0-35.3-28.7-64-64-64H282.5C269.4 26.7 233.8 0 192 0zm0 64a32 32 0 1 1 0 64 32 32 0 1 1 0-64zM112 192H272c8.8 0 16 7.2 16 16s-7.2 16-16 16H112c-8.8 0-16-7.2-16-16s7.2-16 16-16z"/></svg>Taper Notes</span>
                <button class="modal-close-btn" id="taper-notes-close-btn" title="Close">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                  </svg>
                </button>
              </div>
              <div class="taper-notes-content">${escapeHtml(show.taper_notes)}</div>
            </div>
          `;
        }

        const tagModalHtml = `
          <div class="tag-modal" id="tag-modal">
            <div class="modal-blur-wrapper"><div class="modal-blur" id="tag-modal-blur"></div></div>
            <div class="tag-modal-header">
              <span class="tag-modal-title" id="tag-modal-title"></span>
              <button class="modal-close-btn" id="tag-modal-close-btn" title="Close">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
            </div>
            <div class="tag-modal-content" id="tag-modal-content"></div>
          </div>
        `;

        if (hasAudio) {
          modalHtml = `
            <div class="cover-art-modal" id="cover-art-modal">
              <div class="modal-blur-wrapper"><div class="modal-blur" id="cover-art-blur"></div></div>
              <button class="modal-close-btn" id="modal-close-btn" title="Close">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
              <div class="cover-art-modal-content">
                <div class="modal-images">
                  ${coverArtUrlLarge ? `<div class="modal-image-container"><img src="${escapeHtml(coverArtUrlLarge)}" alt="Cover art" class="modal-image" /></div>` : ''}
                  ${albumCoverUrl ? `<div class="modal-image-container"><img src="${escapeHtml(albumCoverUrl)}" alt="Album cover" class="modal-image" /></div>` : ''}
                </div>
                <div class="modal-info-box">
                  Images generated by DALL-E
                </div>
              </div>
            </div>
          `;
          playerHtml = `<%= partial("audio_player_html").gsub("\n", "\n            ") %>`;
        }

        const showUrl = show.show_url || '';

        return `
          <div class="card ${hasAudio ? 'has-player' : ''}">
            <div class="blur-wrapper">
              <div class="background-blur" id="bg-blur"></div>
            </div>
            <%= partial("expand_icons").gsub("\n", "\n            ") %>
            <div class="card-content">
              <div class="card-header">
                <div class="cover-art-container">
                  <img src="${escapeHtml(coverArtUrl)}" alt="" class="cover-art" id="cover-img" />
                  ${hasAudio ? `<button class="play-button" id="header-play-btn" title="Play show">
                    <svg viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                  </button>` : ''}
                </div>
                <div class="show-info">
                  <div class="show-date">
                    <a href="${escapeHtml(showUrl)}" target="_blank" rel="noopener" class="show-date-link">${formatDate(show.date)}</a>
                  </div>
                  <div class="venue-name">${show.venue_slug ? `<a href="https://phish.in/venues/${escapeHtml(show.venue_slug)}" target="_blank" rel="noopener" class="venue-name-link">${escapeHtml(show.venue)}</a>` : escapeHtml(show.venue)}${show.location ? ` · <a href="https://phish.in/map?term=${encodeURIComponent(show.location)}" target="_blank" rel="noopener" class="location-link">${escapeHtml(show.location)}</a>` : ''}</div>
                  <div class="show-meta-row">
                    ${show.duration_ms ? `
                      <span class="show-meta-item">
                        <svg viewBox="0 0 512 512" fill="currentColor">
                          <path d="M256 0a256 256 0 1 1 0 512A256 256 0 1 1 256 0zM232 120V256c0 8 4 15.5 10.7 20l96 64c11 7.4 25.9 4.4 33.3-6.7s4.4-25.9-6.7-33.3L280 243.2V120c0-13.3-10.7-24-24-24s-24 10.7-24 24z"/>
                        </svg>
                        <span>${formatDuration(show.duration_ms)}</span>
                      </span>
                    ` : ''}
                    ${show.taper_notes ? `
                      <span class="show-meta-item clickable" id="taper-notes-btn">
                        <svg viewBox="0 0 384 512" fill="currentColor">
                          <path d="M192 0c-41.8 0-77.4 26.7-90.5 64H64C28.7 64 0 92.7 0 128V448c0 35.3 28.7 64 64 64H320c35.3 0 64-28.7 64-64V128c0-35.3-28.7-64-64-64H282.5C269.4 26.7 233.8 0 192 0zm0 64a32 32 0 1 1 0 64 32 32 0 1 1 0-64zM112 192H272c8.8 0 16 7.2 16 16s-7.2 16-16 16H112c-8.8 0-16-7.2-16-16s7.2-16 16-16z"/>
                        </svg>
                        <span>Notes</span>
                      </span>
                    ` : ''}
                    ${show.tags && show.tags.length > 0 ? `
                      <div class="show-meta-tags" data-tags='${JSON.stringify(show.tags).replace(/'/g, "&#39;")}'>
                        ${renderGroupedTagBadges(show.tags)}
                      </div>
                    ` : ''}
                  </div>
                </div>
              </div>
              ${tracksHtml ? `<div class="track-list">${tracksHtml}</div>` : ''}
            </div>
            ${taperNotesModalHtml}
            ${tagModalHtml}
            ${modalHtml}
            ${playerHtml}
          </div>
          ${renderToast()}
        `;
      }

      function initCoverArtModal() {
        const coverArtContainer = document.querySelector('.cover-art-container');
        const modal = document.getElementById('cover-art-modal');
        const closeBtn = document.getElementById('modal-close-btn');

        if (!coverArtContainer || !modal) return;

        function updateModalPosition() {
          const player = document.getElementById('audio-player');
          if (player && player.classList.contains('visible')) {
            modal.classList.add('with-player');
          } else {
            modal.classList.remove('with-player');
          }
        }

        coverArtContainer.addEventListener('click', (e) => {
          if (!coverArtContainer.classList.contains('clickable')) return;
          const playBtn = document.getElementById('header-play-btn');
          if (playBtn && !playBtn.classList.contains('fade-out')) return;
          e.stopPropagation();
          updateModalPosition();
          modal.classList.add('visible');
        });

        // Listen for player visibility changes
        const player = document.getElementById('audio-player');
        if (player) {
          const observer = new MutationObserver(() => {
            if (modal.classList.contains('visible')) {
              updateModalPosition();
            }
          });
          observer.observe(player, { attributes: true, attributeFilter: ['class'] });
        }

        closeBtn?.addEventListener('click', (e) => {
          e.stopPropagation();
          modal.classList.remove('visible');
        });

        modal.addEventListener('click', (e) => {
          if (e.target === modal) {
            modal.classList.remove('visible');
          }
        });
      }

      function initTaperNotesModal() {
        const taperNotesBtn = document.getElementById('taper-notes-btn');
        const taperNotesModal = document.getElementById('taper-notes-modal');
        const taperNotesCloseBtn = document.getElementById('taper-notes-close-btn');
        if (!taperNotesBtn || !taperNotesModal) return;

        function updateModalPosition() {
          const player = document.getElementById('audio-player');
          if (player && player.classList.contains('visible')) {
            taperNotesModal.classList.add('with-player');
          } else {
            taperNotesModal.classList.remove('with-player');
          }
        }

        taperNotesBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          updateModalPosition();
          taperNotesModal.classList.add('visible');
        });

        const player = document.getElementById('audio-player');
        if (player) {
          const observer = new MutationObserver(() => {
            if (taperNotesModal.classList.contains('visible')) {
              updateModalPosition();
            }
          });
          observer.observe(player, { attributes: true, attributeFilter: ['class'] });
        }

        taperNotesCloseBtn?.addEventListener('click', (e) => {
          e.stopPropagation();
          taperNotesModal.classList.remove('visible');
        });

        taperNotesModal.addEventListener('click', (e) => {
          if (e.target === taperNotesModal) {
            taperNotesModal.classList.remove('visible');
          }
        });
      }

      let showData = null;

      function isDataComplete(data) {
        if (!data) return false;
        return data.date && Array.isArray(data.tracks) && data.tracks.length > 0;
      }

      async function render() {
        const root = document.getElementById('root');
        const data = await waitForData(isDataComplete);
        if (!data?.date) return;

        showData = data;
        root.innerHTML = renderShow(data);
        setupBackgroundBlur(data.cover_art_url);
        
        const coverArtUrl = data.cover_art_url;
        if (coverArtUrl) {
          ['taper-notes-blur', 'tag-modal-blur', 'cover-art-blur'].forEach(id => {
            const el = document.getElementById(id);
            if (el) el.style.backgroundImage = `url("${coverArtUrl}")`;
          });
        }
        
        initExpandButton();
        initAudioPlayer({
          showMetadata: {
            date: data.date,
            venue: data.venue,
            location: data.location,
            cover_art_url: data.cover_art_url
          }
        });
        initTrackMenus();
        initTaperNotesModal();
        initTagModal();
        initCoverArtModal();
      }

      window.addEventListener('message', (event) => {
        if (event.data?.type === 'tool_output' || event.data?.structuredContent || event.data?.date) {
          window._widgetData = event.data.structuredContent || event.data;
          render();
        }
      });

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          render();
          initKeyboardShortcuts();
        });
      } else {
        render();
        initKeyboardShortcuts();
      }
    })();
  </script>
</body>
