= render partial: 'layouts/global_nav'

#content
  #title_box
    h1 Sign In

  #content_box
    .instructions
      | Don't have an account?   
      a.non-remote.strong< href=new_registration_path(resource_name) Sign up now!

    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

      br
      .field_label Email
      .field_content = f.email_field :email, autofocus: true
      = clear_both

      .field_label Password
      .field_content = f.password_field :password
      = clear_both

      - if devise_mapping.rememberable?
        .field_label.field_label_alt = f.check_box :remember_me
        .field_content
          label for='user_remember_me' Remember me
        = clear_both

      br
      .field_label = f.submit 'SIGN IN', class: 'btn'
      = clear_both

    br
    = render 'devise/shared/links'

  = clear_both
