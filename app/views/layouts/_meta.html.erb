<meta name="Description" content="<%= App.app_desc %>">
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<meta property="og:type" content="<%= @meta.dig(:og, :type) || "website" %>">
<meta property="og:url" content="<%= request.original_url %>">
<% unless @meta.dig(:og, :image) == false %>
<meta property="og:image" content="<%= @meta.dig(:og, :image) || image_pack_url("static/images/logo-square-512.png") %>">
<meta property="og:image:alt" content="<%= App.app_name %> image">
<% end %>
<meta property="og:description" content="An open source archive of live Phish audience recordings">
<meta property="og:title" content="<%= @meta.dig(:og, :title) || App.app_name %>">
<% if @meta.dig(:og, :audio).present? %>
  <meta property="og:audio" content="<%= @meta.dig(:og, :audio) %>">
<% end %>
